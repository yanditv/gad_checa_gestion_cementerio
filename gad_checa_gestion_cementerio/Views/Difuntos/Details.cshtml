@model gad_checa_gestion_cementerio.Models.DifuntoModel
@{
    ViewData["Title"] = "Detalles del Difunto";
}
<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3"><i class="ti ti-user-heart text-primary fs-3"></i></span>
            <div>
                <h4 class="mb-1 text-dark fw-semibold">@ViewData["Title"]</h4>
                <p class="mb-0 text-muted small">Información completa del registro, ubicación y contrato.</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Datos personales -->
            <div class="col-md-6">
                <div class="mb-3">
                    <span class="text-muted small"><i class="ti ti-user me-1"></i> Nombres</span><br />
                    <span class="fw-bold fs-5">@Model.Nombres @Model.Apellidos</span>
                </div>
                <div class="mb-3">
                    <span class="text-muted small"><i class="ti ti-id me-1"></i> Identificación</span><br />
                    <span class="fw-bold">@Model.NumeroIdentificacion</span>
                </div>
                <div class="mb-3">
                    <span class="text-muted small"><i class="ti ti-calendar me-1"></i> Fecha de Nacimiento</span><br />
                    <span class="fw-bold">@Model.FechaNacimiento.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="mb-3">
                    <span class="text-muted small"><i class="ti ti-calendar-x me-1"></i> Fecha de Fallecimiento</span><br />
                    <span class="fw-bold">@Model.FechaFallecimiento.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="mb-3">
                    <span class="text-muted small"><i class="ti ti-discount-2 me-1"></i> Descuento</span><br />
                    <span class="fw-bold badge bg-warning text-dark">@ViewData["Descuento"]</span>
                </div>
            </div>
            <!-- Ubicación y propietario -->
            <div class="col-md-6">
                <div class="card bg-light-info border-0 mb-3">
                    <div class="card-body p-3">
                        <div class="mb-2">
                            <span class="text-muted small fw-semibold"><i class="ti ti-map-pin me-1"></i> Ubicación</span><br />
                            <span class="fw-bold">
                                @Model.Boveda?.Piso?.Bloque?.Descripcion - Piso @Model.Boveda?.Piso?.NumeroPiso - Bóveda @Model.Boveda?.Numero
                            </span>
                        </div>
                        @if (Model.Boveda?.Propietario != null)
                        {
                            <div class="mb-2">
                                <span class="text-muted small fw-semibold"><i class="ti ti-user me-1"></i> Propietario</span><br />
                                <span class="fw-bold">@Model.Boveda.Propietario.Nombres @Model.Boveda.Propietario.Apellidos</span><br />
                                <span class="text-muted small">@Model.Boveda.Propietario.TipoIdentificacion: @Model.Boveda.Propietario.NumeroIdentificacion</span>
                            </div>
                        }
                        <div class="mb-2">
                            <span class="text-muted small fw-semibold"><i class="ti ti-file-contract me-1"></i> Contrato</span><br />
                            <span class="fw-bold">@Model.Contrato?.NumeroSecuencial</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @if (Model.Contrato != null)
        {
            <hr class="my-4" />
            <div class="row g-4">
                <div class="col-md-6">
                    <div class="card border-0 shadow-sm h-100">
                        <div class="card-header bg-primary text-white border-0 py-2 d-flex align-items-center">
                            <i class="ti ti-file-description me-2"></i>
                            <span class="fw-semibold">Contrato</span>
                        </div>
                        <div class="card-body">
                            <div class="mb-2"><span class="text-muted small fw-semibold"><i class="ti ti-hash me-1"></i> N° Secuencial</span><br /><span class="fw-bold">@Model.Contrato.NumeroSecuencial</span></div>
                            <div class="mb-2"><span class="text-muted small fw-semibold"><i class="ti ti-calendar-event me-1"></i> Fecha de Inicio</span><br /><span class="fw-bold">@Model.Contrato.FechaInicio.ToString("dd/MM/yyyy")</span></div>
                            <div class="mb-2"><span class="text-muted small fw-semibold"><i class="ti ti-calendar-x me-1"></i> Fecha de Vencimiento</span><br /><span class="fw-bold">@(Model.Contrato.FechaFin == null ? "Indefinido" : Model.Contrato.FechaFin?.ToString("dd/MM/yyyy"))</span></div>
                            <div class="mb-2"><span class="text-muted small fw-semibold"><i class="ti ti-currency-dollar me-1"></i> Monto Total</span><br /><span class="fw-bold text-primary">$@Model.Contrato.MontoTotal.ToString("N2")</span></div>
                            <div class="mb-2"><span class="text-muted small fw-semibold"><i class="ti ti-file-text me-1"></i> Observaciones</span><br /><span class="fw-bold">@Model.Contrato.Observaciones</span></div>
                            @if (!string.IsNullOrEmpty(Model.Contrato.PathDocumentoFirmado))
                            {
                                <div class="mb-2">
                                    <span class="text-muted small fw-semibold"><i class="ti ti-link me-1"></i> Documento Firmado</span><br />
                                    <a href="@Url.Content(Model.Contrato.PathDocumentoFirmado)" target="_blank" class="fw-bold text-decoration-underline text-info">
                                        <i class="ti ti-link"></i> Ver documento
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                </div>
                @if (Model.Contrato.Responsables != null && Model.Contrato.Responsables.Any())
                {
                    <div class="col-md-6">
                        <div class="card bg-light-secondary border-0 shadow-sm h-100">
                            <div class="card-header bg-secondary text-white border-0 py-2 d-flex align-items-center">
                                <i class="ti ti-users me-2"></i>
                                <span class="fw-semibold">Responsables</span>
                            </div>
                            <div class="card-body">
                                @foreach (var resp in Model.Contrato.Responsables)
                                {
                                    <div class="mb-2 border-bottom pb-2">
                                        <div class="fw-bold"><i class="ti ti-user me-1"></i> @resp.Nombres @resp.Apellidos</div>
                                        <div class="small text-muted"><i class="ti ti-id me-1"></i> @resp.TipoIdentificacion: @resp.NumeroIdentificacion</div>
                                        <div class="small"><i class="ti ti-phone me-1"></i> @resp.Telefono</div>
                                        <div class="small"><i class="ti ti-mail me-1"></i> @resp.Email</div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
            @if (Model.Contrato.Cuotas != null && Model.Contrato.Cuotas.Any())
            {
                <div class="card border-0 shadow-sm mt-4">
                    <div class="card-header bg-warning text-dark border-0 py-2 d-flex align-items-center">
                        <i class="ti ti-currency-dollar me-2"></i>
                        <span class="fw-semibold">Cuotas del Contrato</span>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-sm table-bordered mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Vencimiento</th>
                                        <th>Monto</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var cuota in Model.Contrato.Cuotas)
                                    {
                                        <tr>
                                            <td>@cuota.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                            <td><span class="fw-bold">$@cuota.Monto.ToString("N2")</span></td>
                                            <td>
                                                @if (cuota.Pagada)
                                                {
                                                    <span class="badge bg-success"><i class="ti ti-check me-1"></i>Pagada</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-danger"><i class="ti ti-alert-triangle me-1"></i>Pendiente</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            }
        }
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="ti ti-edit me-1"></i>Editar
            </a>
        </div>
    </div>
</div> 