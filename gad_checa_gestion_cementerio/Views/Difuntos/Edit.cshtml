@model gad_checa_gestion_cementerio.Models.DifuntoModel
@{
    ViewData["Title"] = "Editar Difunto";
}
<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3"><i class="ti ti-user-edit text-primary fs-3"></i></span>
            <div>
                <h4 class="mb-1 text-dark">@ViewData["Title"]</h4>
                <p class="mb-0 text-muted small">Modifique la información del difunto y guarde los cambios.</p>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Edit" method="post">
            <input type="hidden" asp-for="Id" />
            <div asp-validation-summary="ModelOnly" class="alert alert-danger border-0 mb-4"></div>
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="NumeroIdentificacion" class="form-label fw-semibold">
                        <i class="ti ti-id me-1 text-primary"></i> Cédula
                    </label>
                    <div class="input-group">
                        <span class="input-group-text bg-light border-end-0">
                            <i class="ti ti-id text-muted"></i>
                        </span>
                        <input asp-for="NumeroIdentificacion" class="form-control border-start-0"
                            placeholder="Ingrese número de cédula" />
                    </div>
                    <span asp-validation-for="NumeroIdentificacion" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Nombres" class="form-label fw-semibold">
                        <i class="ti ti-user me-1 text-primary"></i> Nombres
                    </label>
                    <input asp-for="Nombres" class="form-control" placeholder="Ingrese nombres" />
                    <span asp-validation-for="Nombres" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="Apellidos" class="form-label fw-semibold">
                        <i class="ti ti-user me-1 text-primary"></i> Apellidos
                    </label>
                    <input asp-for="Apellidos" class="form-control" placeholder="Ingrese apellidos" />
                    <span asp-validation-for="Apellidos" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaNacimiento" class="form-label fw-semibold">
                        <i class="ti ti-calendar me-1 text-primary"></i> Fecha de Nacimiento
                    </label>
                    <input asp-for="FechaNacimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaNacimiento" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaFallecimiento" class="form-label fw-semibold">
                        <i class="ti ti-calendar-x me-1 text-primary"></i> Fecha de Fallecimiento
                    </label>
                    <input asp-for="FechaFallecimiento" type="date" class="form-control" />
                    <span asp-validation-for="FechaFallecimiento" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">
                        <i class="ti ti-discount-2 me-1 text-primary"></i> Descuento
                    </label>
                    <select class="form-select" disabled>
                        <option selected>@ViewBag.DescuentoNombre</option>
                    </select>
                    <input type="hidden" asp-for="DescuentoId" />
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i>Cancelar
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="ti ti-device-floppy me-1"></i>Guardar Cambios
                </button>
            </div>
        </form>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}