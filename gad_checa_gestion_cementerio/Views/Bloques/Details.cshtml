@model gad_checa_gestion_cementerio.Models.Views.BloqueViewModel

@{
    ViewData["Title"] = "Detalles del Bloque";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="ti ti-building me-2"></i>Detalles del Bloque
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-none">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-info-circle me-2"></i>Información General</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Descripcion)
                                        </dt>
                                        <dd class="col-sm-8 fw-bold">@Html.DisplayFor(model => model.Descripcion)</dd>

                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.Tipo)</dt>
                                        <dd class="col-sm-8">
                                            <span class="badge bg-info">@Html.DisplayFor(model => model.Tipo)</span>
                                        </dd>

                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.CalleA)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CalleA)</dd>

                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.CalleB)</dt>
                                        <dd class="col-sm-8">@Html.DisplayFor(model => model.CalleB)</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="card border-0 shadow-none">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-layout-grid me-2"></i>Configuración</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model =>
                                            model.NumeroDePisos)</ dt >
                                            <dd class="col-sm-8">
                                                <span class="badge bg-primary">@Html.DisplayFor(model =>
                                                    model.NumeroDePisos) pisos </ span >
                                        </dd>

                                        <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model =>
                                            model.BovedasPorPiso)</ dt >
                                            <dd class="col-sm-8">
                                                <span class="badge bg-success">@Html.DisplayFor(model =>
                                                    model.BovedasPorPiso) bóvedas </ span >
                                            </dd>

                                            <dt class="col-sm-4 text-muted">@Html.DisplayNameFor(model => model.TarifaBase)
                                            </dt>
                                            <dd class="col-sm-8">
                                                <span class="text-success fw-bold">$@Html.DisplayFor(model =>
                                                    model.TarifaBase)</ span >
                                        </dd>

                                        <dt class="col-sm-4 text-muted">Cementerio</dt>
                                        <dd class="col-sm-8">
                                            <i class="ti ti-map-pin me-1"></i>@ViewBag.CementerioNombre
                                        </dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row mt-4">
                        <div class="col-12">
                            <div class="card border-0 shadow-none">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-coin me-2"></i>Precios por Piso</h5>
                                </div>
                                <div class="card-body">
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead class="table-light">
                                                <tr>
                                                    <th><i class="ti ti-layers me-1"></i>Piso</th>
                                                    <th><i class="ti ti-currency-dollar me-1"></i>Precio</th>
                                                    <th><i class="ti ti-tag me-1"></i>Tipo de Precio</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var piso in Model.PreciosPorPiso)
                                                {
                                                    <tr>
                                                        <td>
                                                            <span class="badge bg-primary">Piso @piso.NumeroPiso</span>
                                                        </td>
                                                        <td class="text-success fw-bold">
                                                            $@(piso.UsarTarifaBase ? Model.TarifaBase :
                                                            piso.PrecioPersonalizado)
                                                    </td>
                                                    <td>
                                                        @if (piso.UsarTarifaBase)
                                                            {
                                                                <span class="badge bg-info">Tarifa Base</span>
                                                            }
                                                            else
                                                            {
                                                                <span class="badge bg-warning">Personalizado</span>
                                                            }
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="card-footer bg-transparent border-0 text-end mt-4">
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="ti ti-edit me-1"></i>Editar
                        </a>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="ti ti-arrow-left me-1"></i>Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
