@model gad_checa_gestion_cementerio.Models.Views.BloqueViewModel

@{
    ViewData["Title"] = "Detalles del Bloque";
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex align-items-center">
            <i class="fas fa-building me-2"></i>
            <h4 class="card-title mb-0">@ViewData["Title"]</h4>
        </div>
        <p class="mt-2 mb-0">
            Información detallada del bloque y sus bóvedas.
        </p>
    </div>

    <div class="card-body">
        <div class="row">
            <!-- Información Básica -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Información Básica</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-building text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Descripción</small>
                                        <span class="fw-bold">@Model.Descripcion</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-tag text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Tipo</small>
                                        <span class="badge bg-info">@Model.Tipo</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-layer-group text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número de Pisos</small>
                                        <span class="badge bg-primary">@Model.NumeroDePisos</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-boxes text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bóvedas por Piso</small>
                                        <span class="badge bg-success">@Model.BovedasPorPiso</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Ubicación -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-map-marker-alt me-2"></i>Ubicación</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-road text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Calle A</small>
                                        <span class="fw-bold">@Model.CalleA</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-road text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Calle B</small>
                                        <span class="fw-bold">@Model.CalleB</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-archway text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Cementerio</small>
                                        <span class="fw-bold">@Model.Cementerio?.Nombre</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-dollar-sign text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Tarifa Base</small>
                                        <span class="fw-bold">$@Model.TarifaBase.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Estadísticas -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Estadísticas</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-calculator text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Total de Bóvedas</small>
                                        <span class="fw-bold">@Model.TotalBovedas</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-check-circle text-success me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bóvedas Disponibles</small>
                                        <span class="badge bg-success">@Model.BovedasDisponibles</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-times-circle text-danger me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bóvedas Ocupadas</small>
                                        <span class="badge bg-danger">@Model.BovedasOcupadas</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="d-flex align-items-center">
                                    <i class="fas fa-percentage text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Porcentaje de Ocupación</small>
                                        <div class="progress" style="height: 20px;">
                                            <div class="progress-bar @(Model.PorcentajeOcupacion > 80 ? "bg-danger" : Model.PorcentajeOcupacion > 50 ? "bg-warning" : "bg-success")"
                                                role="progressbar" style="width: @Model.PorcentajeOcupacion%;"
                                                aria-valuenow="@Model.PorcentajeOcupacion" aria-valuemin="0" aria-valuemax="100">
                                                @Model.PorcentajeOcupacion.ToString("0.0")%
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Precios por Piso -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0"><i class="fas fa-money-bill-wave me-2"></i>Precios por Piso</h5>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Piso</th>
                                        <th>Precio</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var precio in Model.PreciosPorPiso)
                                    {
                                        <tr>
                                            <td>Piso @precio.NumeroPiso</td>
                                            <td>$@(precio.UsarTarifaBase ? Model.TarifaBase.ToString("0.00") : precio.PrecioPersonalizado?.ToString("0.00"))</td>
                                            <td>
                                                @if (precio.UsarTarifaBase)
                                                {
                                                    <span class="badge bg-info">Tarifa Base</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning">Personalizado</span>
                                                }
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Lista de Difuntos -->
        @if (Model.Difuntos?.Any() == true)
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">
                        <i class="fas fa-users me-2"></i>Difuntos en el Bloque
                    </h5>
                    <span class="badge bg-primary">@Model.Difuntos.Count() registros</span>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user me-2 text-primary"></i>
                                            <span>Nombre Completo</span>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-calendar-alt me-2 text-primary"></i>
                                            <span>Fecha de Fallecimiento</span>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-map-marker-alt me-2 text-primary"></i>
                                            <span>Ubicación</span>
                                        </div>
                                    </th>
                                    <th class="border-0">
                                        <div class="d-flex align-items-center">
                                            <i class="fas fa-user-tie me-2 text-primary"></i>
                                            <span>Propietario</span>
                                        </div>
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var difunto in Model.Difuntos)
                                {
                                    <tr>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary text-white me-3">
                                                    @{
                                                        var inicial1 = !string.IsNullOrEmpty(difunto.Nombres) ? difunto.Nombres[0].ToString().ToUpper() : "?";
                                                        var inicial2 = !string.IsNullOrEmpty(difunto.Apellidos) ? difunto.Apellidos[0].ToString().ToUpper() : "?";
                                                    }
                                                    @inicial1@inicial2
                                                </div>
                                                <div>
                                                    <h6 class="mb-0">@difunto.Nombres @difunto.Apellidos</h6>
                                                    <small class="text-muted">ID: @difunto.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-light text-dark">
                                                    <i class="fas fa-calendar me-1"></i>
                                                    @(difunto.FechaFallecimiento?.ToString("dd/MM/yyyy") ?? "No registrada")
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <span class="badge bg-info">
                                                    <i class="fas fa-building me-1"></i>
                                                    Piso @difunto.NumeroPiso - Bóveda @difunto.NumeroBoveda
                                                </span>
                                            </div>
                                        </td>
                                        <td>
                                            <div class="d-flex align-items-center">
                                                @if (!string.IsNullOrEmpty(difunto.Propietario))
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-user-tie me-1"></i>
                                                        @difunto.Propietario
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">
                                                        <i class="fas fa-user-slash me-1"></i>
                                                        Sin propietario
                                                    </span>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }

        <!-- Vista Gráfica de Bóvedas -->
        <div class="card border-0 shadow-sm mt-4">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-th me-2"></i>Vista Gráfica de Bóvedas</h5>
            </div>
            <div class="card-body">
                <!-- Leyenda de Colores -->
                <div class="mb-4">
                    <h6 class="mb-3"><i class="fas fa-info-circle me-2"></i>Leyenda de Estados</h6>
                    <div class="d-flex flex-wrap gap-3">
                        <div class="d-flex align-items-center">
                            <div style="height: 12px; width: 12px; background-color: #28a745; border-radius: 50%;" class="me-2"></div>
                            <span>Disponible</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div style="height: 12px; width: 12px; background-color: #dc3545; border-radius: 50%;" class="me-2"></div>
                            <span>Ocupada</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div style="height: 12px; width: 12px; background-color: #6c757d; border-radius: 50%;" class="me-2"></div>
                            <span>Con Propietario</span>
                        </div>
                        <div class="d-flex align-items-center">
                            <div style="height: 12px; width: 12px; background-color: #ffc107; border-radius: 50%;" class="me-2"></div>
                            <span>Por Liberar</span>
                        </div>
                    </div>
                </div>

                <div class="mx-auto w-100 overflow-hidden rounded-lg shadow-md">
                    <div class="d-flex">
                        <!-- Calle Izquierda -->
                        <div class="w-16 bg-dark d-flex align-items-center justify-content-center rounded-start">
                            <span class="text-white fw-bold" style="writing-mode: vertical-rl; transform: rotate(180deg);">Calle B</span>
                        </div>

                        <!-- Bloque de bóvedas -->
                        <div class="flex-grow-1">
                            <div class="bg-light p-4 pb-12">
                                @for (int i = Model.NumeroDePisos; i > 0; i--)
                                {
                                    <div class="d-flex flex-column mb-4">
                                        <p class="mb-2 h6 fw-bold">Piso @i</p>
                                        <div class="d-flex flex-wrap gap-2">
                                            @for (int boveda = 1; boveda <= Model.BovedasPorPiso; boveda++)
                                            {
                                                var bovedaInfo = Model.Bovedas?.Where(b => b.NumeroPiso == i && b.Numero == boveda)?.FirstOrDefault();
                                                <div class="border border-secondary bg-white position-relative rounded-lg shadow-sm p-3 d-flex flex-column align-items-center justify-content-center"
                                                    style="width: 100px; height: 100px;"
                                                    data-bs-toggle="tooltip" 
                                                    data-bs-placement="top" 
                                                    title="@(bovedaInfo?.Estado switch {
                                                        "disponible" => "Bóveda Disponible",
                                                        "ocupada" => "Bóveda Ocupada",
                                                        "propietario" => "Bóveda con Propietario",
                                                        "por-liberar" => "Bóveda por Liberar",
                                                        _ => "Estado Desconocido"
                                                    })">
                                                    <i class="fas fa-box-open fa-2x mb-2 @(bovedaInfo?.Estado switch {
                                                        "disponible" => "text-success",
                                                        "ocupada" => "text-danger",
                                                        "propietario" => "text-secondary",
                                                        "por-liberar" => "text-warning",
                                                        _ => "text-secondary"
                                                    })"></i>
                                                    <p class="text-dark mb-0">
                                                        @(string.IsNullOrEmpty(bovedaInfo?.NumeroSecuencial) ? 
                                                            boveda.ToString() : 
                                                            bovedaInfo.NumeroSecuencial)
                                                    </p>
                                                    <div class="d-flex gap-1 position-absolute" style="bottom: 0.5rem; right: 0.5rem;">
                                                        @if (bovedaInfo?.TienePropietario == true)
                                                        {
                                                            <div style="height: 10px; width: 10px; background-color: #6c757d; border-radius: 50%;" 
                                                                title="Tiene Propietario"></div>
                                                        }
                                                        @if (bovedaInfo?.TieneContratoActivo == true)
                                                        {
                                                            <div style="height: 10px; width: 10px; background-color: #dc3545; border-radius: 50%;" 
                                                                title="Tiene Contrato Activo"></div>
                                                        }
                                                        @if (bovedaInfo?.Estado == "por-liberar")
                                                        {
                                                            <div style="height: 10px; width: 10px; background-color: #ffc107; border-radius: 50%;" 
                                                                title="Por Liberar"></div>
                                                        }
                                                        @if (bovedaInfo?.Estado == "disponible")
                                                        {
                                                            <div style="height: 10px; width: 10px; background-color: #28a745; border-radius: 50%;" 
                                                                title="Disponible"></div>
                                                        }
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                    @if (i != 1)
                                    {
                                        <div class="border border-secondary my-4"></div>
                                    }
                                }
                            </div>
                            <!-- Calle Principal -->
                            <div class="bg-dark h-14 d-flex w-100 align-items-center justify-content-center">
                                <span class="text-white fw-bold">Calle A</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Botones de Acción -->
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                <i class="fas fa-edit me-2"></i>Editar
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}

@section Styles {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1rem;
        }

        .table > :not(caption) > * > * {
            padding: 1rem;
        }

        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 500;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0,0,0,.02);
        }
    </style>
}
