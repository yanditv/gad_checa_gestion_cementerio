@model gad_checa_gestion_cementerio.Models.Views.BloqueViewModel

@{
    ViewData["Title"] = "Crear Bloque";
}

<div class="container-fluid">
    <h1>Crear Bloque</h1>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5>Crear Nuevo Bloque</h5>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Descripcion" class="control-label"></label>
                                    <input asp-for="Descripcion" class="form-control" />
                                    <span asp-validation-for="Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="Tipo" class="control-label"></label>
                                    <select asp-for="Tipo" class="form-control">
                                        <option value="Bovedas">Bovedas</option>
                                        <option value="Nichos">Nichos</option>
                                    </select>
                                    <span asp-validation-for="Tipo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CalleA" class="control-label"></label>
                                    <input asp-for="CalleA" class="form-control" />
                                    <span asp-validation-for="CalleA" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CalleB" class="control-label"></label>
                                    <input asp-for="CalleB" class="form-control" />
                                    <span asp-validation-for="CalleB" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="NumeroDePisos" class="control-label"></label>
                                    <input asp-for="NumeroDePisos" class="form-control" min="1" max="20" />
                                    <span asp-validation-for="NumeroDePisos" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="BovedasPorPiso" class="control-label"></label>
                                    <input asp-for="BovedasPorPiso" class="form-control" min="1" max="100" />
                                    <span asp-validation-for="BovedasPorPiso" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label asp-for="TarifaBase" class="control-label"></label>
                                    <input asp-for="TarifaBase" class="form-control" type="number" step="0.01"
                                        min="0.01" />
                                    <span asp-validation-for="TarifaBase" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    <label asp-for="CementerioId" class="control-label"></label>
                                    <select asp-for="CementerioId" class="form-control"
                                        asp-items="@(new SelectList(ViewBag.Cementerios, "Id", "Nombre"))">
                                        <option value="">-- Seleccione un cementerio --</option>
                                    </select>
                                    <span asp-validation-for="CementerioId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row mt-4">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-header">
                                        <h5 class="card-title mb-0">Configuración de Precios por Piso</h5>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered" id="tablaPrecios">
                                                <thead>
                                                    <tr>
                                                        <th>Piso</th>
                                                        <th>Usar Tarifa Base</th>
                                                        <th>Precio Personalizado</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <!-- Se llenará dinámicamente -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary">Crear</button>
                            <a asp-action="Index" class="btn btn-secondary">Volver</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        $(function () {
            function actualizarTablaPrecios() {
                const numeroPisos = parseInt($('#NumeroDePisos').val()) || 0;
                const tarifaBase = parseFloat($('#TarifaBase').val()) || 0;
                const tbody = $('#tablaPrecios tbody');
                tbody.empty();

                for (let i = 1; i <= numeroPisos; i++) {
                    tbody.append(`
                                <tr>
                                    <td>${i}</td>
                                    <td>
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input usar-tarifa-base" 
                                                name="PreciosPorPiso[${i - 1}].UsarTarifaBase" 
                                                value="true" 
                                                checked />
                                            <input type="hidden" name="PreciosPorPiso[${i - 1}].UsarTarifaBase" value="false" />
                                        </div>
                                    </td>
                                    <td>
                                        <input type="number" class="form-control precio-personalizado" 
                                            name="PreciosPorPiso[${i - 1}].PrecioPersonalizado" 
                                            value="${tarifaBase}" 
                                            step="0.01" 
                                            disabled />
                                        <input type="hidden" name="PreciosPorPiso[${i - 1}].NumeroPiso" value="${i}" />
                                    </td>
                                </tr>
                            `);
                }
            }

            // Inicializar la tabla
            actualizarTablaPrecios();

            // Eventos
            $('#NumeroDePisos, #TarifaBase').on('change', actualizarTablaPrecios);

            $(document).on('change', '.usar-tarifa-base', function () {
                const precioInput = $(this).closest('tr').find('.precio-personalizado');
                precioInput.prop('disabled', this.checked);
                if (this.checked) {
                    precioInput.val($('#TarifaBase').val());
                }
            });
        });
    </script>
}