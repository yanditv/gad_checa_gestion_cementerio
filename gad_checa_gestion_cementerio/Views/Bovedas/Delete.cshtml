@model gad_checa_gestion_cementerio.Data.Boveda

@{
    ViewData["Title"] = "Eliminar Bóveda";
    var tieneContratos = Model.Contratos != null && Model.Contratos.Any();
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h4 class="card-title mb-0">
                        <i class="ti ti-trash me-2"></i>@ViewData["Title"]
                    </h4>
                </div>
                <div class="card-body">
                    @if (tieneContratos)
                    {
                        <div class="alert alert-warning">
                            <h5 class="alert-heading">¡No se puede eliminar esta bóveda!</h5>
                            <p>Esta bóveda tiene contratos asociados y no puede ser eliminada.</p>
                        </div>
                    }
                    else
                    {
                        <div class="alert alert-danger">
                            <h5 class="alert-heading">¿Está seguro que desea eliminar esta bóveda?</h5>
                            <p>Esta acción no se puede deshacer.</p>
                        </div>
                    }

                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-building me-2"></i>Información de Ubicación</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Número:</dt>
                                        <dd class="col-sm-8">@Model.Numero</dd>

                                        <dt class="col-sm-4">Número Secuencial:</dt>
                                        <dd class="col-sm-8">@Model.NumeroSecuecial</dd>

                                        <dt class="col-sm-4">Estado:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Estado)
                                            {
                                                <span class="badge bg-success">Disponible</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ocupada</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Piso:</dt>
                                        <dd class="col-sm-8">@Model.Piso?.NumeroPiso</dd>

                                        <dt class="col-sm-4">Bloque:</dt>
                                        <dd class="col-sm-8">@Model.Piso?.Bloque?.Descripcion</dd>

                                        <dt class="col-sm-4">Precio:</dt>
                                        <dd class="col-sm-8">$@Model.Piso?.Precio.ToString("N2")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-user me-2"></i>Información del Propietario</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Propietario != null)
                                    {
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Nombres:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Nombres</dd>

                                            <dt class="col-sm-4">Apellidos:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Apellidos</dd>

                                            <dt class="col-sm-4">Identificación:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.TipoIdentificacion:
                                                @Model.Propietario.NumeroIdentificacion</dd>

                                            <dt class="col-sm-4">Teléfono:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Telefono</dd>

                                            <dt class="col-sm-4">Email:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Email</dd>

                                            <dt class="col-sm-4">Dirección:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Direccion</dd>

                                            <dt class="col-sm-4">Catastro:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Catastro</dd>
                                        </dl>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="ti ti-info-circle me-2"></i>Esta bóveda no tiene propietario asignado.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    @if (tieneContratos)
                    {
                        <div class="row mt-4">
                            <div class="col-12">
                                <h5>Contratos Asociados</h5>
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Número</th>
                                                <th>Fecha Inicio</th>
                                                <th>Fecha Fin</th>
                                                <th>Estado</th>
                                                <th>Monto Total</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var contrato in Model.Contratos)
                                            {
                                                <tr>
                                                    <td>@contrato.NumeroSecuencial</td>
                                                    <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                                    <td>@contrato.FechaFin.ToString("dd/MM/yyyy")</td>
                                                    <td>
                                                        @if (contrato.Estado)
                                                        {
                                                            <span class="badge bg-success">Activo</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Inactivo</span>
                                                        }
                                                    </td>
                                                    <td>$@contrato.MontoTotal.ToString("N2")</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="btn-group">
                        @if (!tieneContratos)
                        {
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn-danger">
                                    <i class="fas fa-trash"></i> Eliminar
                                </button>
                            </form>
                        }
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Volver
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>