@model gad_checa_gestion_cementerio.Models.BovedaModel

@{
    ViewData["Title"] = "Eliminar Bóveda";
    var tieneContratos = Model.Contratos != null && Model.Contratos.Any(c =>
    c.FechaInicio <= DateTime.Now &&
    (c.FechaFin == null || c.FechaFin >= DateTime.Now));
    var puedeEliminar = !tieneContratos && !Model.TienePropietario;
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3"><i class="ti ti-trash text-danger fs-3"></i></span>
            <div>
                <h4 class="mb-1 text-dark">@ViewData["Title"]</h4>
                <p class="mb-0 text-muted small">Verifique la información antes de eliminar la bóveda.</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        @if (!puedeEliminar)
        {
            <div class="alert alert-warning d-flex align-items-center">
                <i class="ti ti-alert-triangle text-warning fs-4 me-2"></i>
                <div>
                    <strong>No se puede eliminar esta bóveda</strong><br />
                    @if (tieneContratos)
                    {
                        <span><i class="ti ti-file-description me-1"></i>Esta bóveda tiene contratos activos asociados.</span><br />
                    }
                    @if (Model.TienePropietario)
                    {
                        <span><i class="ti ti-user me-1"></i>Esta bóveda tiene un propietario asignado.</span>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger d-flex align-items-center">
                <i class="ti ti-exclamation-circle text-danger fs-4 me-2"></i>
                <div>
                    <strong>¿Está seguro que desea eliminar esta bóveda?</strong><br />
                    <span>Esta acción no se puede deshacer.</span>
                </div>
            </div>
        }
        <div class="row g-4">
            <!-- Información de la Bóveda -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-info-circle me-2 text-primary"></i>Información de la Bóveda</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-hash text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número</small>
                                        <span class="fw-bold">@Model.Numero</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-numbers text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número Secuencial</small>
                                        <span class="fw-bold">@Model.NumeroSecuencial</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-toggle-left text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Estado</small>
                                        @if (Model.Estado)
                                        {
                                            <span class="badge bg-success-subtle text-success"><i class="ti ti-check me-1"></i>Disponible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger"><i class="ti ti-x me-1"></i>Ocupada</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-layers-difference text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Piso</small>
                                        <span class="fw-bold">@Model.Piso?.NumeroPiso</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-building text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bloque</small>
                                        <span class="fw-bold">@Model.Piso?.Bloque?.Descripcion</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-currency-dollar text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Precio</small>
                                        <span class="fw-bold">$@Model.Piso?.Precio.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Información del Propietario -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-user me-2 text-primary"></i>Información del Propietario</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Propietario != null)
                        {
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Nombres</small>
                                            <span class="fw-bold">@Model.Propietario.Nombres</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Apellidos</small>
                                            <span class="fw-bold">@Model.Propietario.Apellidos</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-id text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Identificación</small>
                                            <span class="fw-bold">@Model.Propietario.TipoIdentificacion: @Model.Propietario.NumeroIdentificacion</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-phone text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Teléfono</small>
                                            <span class="fw-bold">@Model.Propietario.Telefono</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-mail text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Email</small>
                                            <span class="fw-bold">@Model.Propietario.Email</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-map-pin text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Dirección</small>
                                            <span class="fw-bold">@Model.Propietario.Direccion</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info d-flex align-items-center mb-0">
                                <i class="ti ti-info-circle me-2"></i>Esta bóveda no tiene propietario asignado.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        @if (tieneContratos)
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light border-0 py-2">
                    <h6 class="mb-0"><i class="ti ti-file-description me-2 text-primary"></i>Contratos Activos</h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Número</th>
                                    <th>Fecha Inicio</th>
                                    <th>Fecha Fin</th>
                                    <th>Estado</th>
                                    <th>Monto Total</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contrato in Model.Contratos.Where(c =>
                                                            c.FechaInicio <= DateTime.Now &&
                                                            (c.FechaFin == null || c.FechaFin >= DateTime.Now)))
                                {
                                    <tr>
                                        <td>@contrato.NumeroSecuencial</td>
                                        <td>@contrato.FechaInicio.ToString("dd/MM/yyyy")</td>
                                        <td>@(contrato.FechaFin == null ? "Indefinido" : ((DateTime)contrato.FechaFin).ToString("dd/MM/yyyy"))</td>
                                <td>
                                            <span class="badge bg-success-subtle text-success"><i class="ti ti-check me-1"></i>Activo</span>
                                </td>
                                <td>$@contrato.MontoTotal.ToString("N2")</td>
                            </tr>
                                                        }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
    <div class="card-footer bg-white border-0 d-flex justify-content-end gap-2">
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="ti ti-arrow-left me-1"></i>Volver
            </a>
            @if (puedeEliminar)
            {
                <form asp-action="Delete" class="d-inline">
                    <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-outline-danger">
                    <i class="ti ti-trash me-1"></i>Eliminar
                    </button>
                </form>
            }
    </div>
</div>