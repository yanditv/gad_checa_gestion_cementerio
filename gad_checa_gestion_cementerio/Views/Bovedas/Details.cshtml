@model gad_checa_gestion_cementerio.Data.Boveda

@{
    ViewData["Title"] = "Detalles de la Bóveda";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="card-title mb-0">
                        <i class="ti ti-info-circle me-2"></i>Detalles de la Bóveda
                    </h4>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm mb-4">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-building me-2"></i>Información de Ubicación</h5>
                                </div>
                                <div class="card-body">
                                    <dl class="row mb-0">
                                        <dt class="col-sm-4">Número:</dt>
                                        <dd class="col-sm-8">@Model.Numero</dd>

                                        <dt class="col-sm-4">Número Secuencial:</dt>
                                        <dd class="col-sm-8">@Model.NumeroSecuecial</dd>

                                        <dt class="col-sm-4">Estado:</dt>
                                        <dd class="col-sm-8">
                                            @if (Model.Estado)
                                            {
                                                <span class="badge bg-success">Disponible</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Ocupada</span>
                                            }
                                        </dd>

                                        <dt class="col-sm-4">Piso:</dt>
                                        <dd class="col-sm-8">@Model.Piso?.NumeroPiso</dd>

                                        <dt class="col-sm-4">Bloque:</dt>
                                        <dd class="col-sm-8">@Model.Piso?.Bloque?.Descripcion</dd>

                                        <dt class="col-sm-4">Precio:</dt>
                                        <dd class="col-sm-8">$@Model.Piso?.Precio.ToString("N2")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="card border-0 shadow-sm">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0"><i class="ti ti-user me-2"></i>Información del Propietario</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.Propietario != null)
                                    {
                                        <dl class="row mb-0">
                                            <dt class="col-sm-4">Nombres:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Nombres</dd>

                                            <dt class="col-sm-4">Apellidos:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Apellidos</dd>

                                            <dt class="col-sm-4">Identificación:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.TipoIdentificacion:
                                                @Model.Propietario.NumeroIdentificacion</dd>

                                            <dt class="col-sm-4">Teléfono:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Telefono</dd>

                                            <dt class="col-sm-4">Email:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Email</dd>

                                            <dt class="col-sm-4">Dirección:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Direccion</dd>

                                            <dt class="col-sm-4">Catastro:</dt>
                                            <dd class="col-sm-8">@Model.Propietario.Catastro</dd>
                                        </dl>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            <i class="ti ti-info-circle me-2"></i>Esta bóveda no tiene propietario asignado.
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="text-end mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="ti ti-arrow-left me-1"></i>Volver
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">
                            <i class="ti ti-edit me-1"></i>Editar
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>