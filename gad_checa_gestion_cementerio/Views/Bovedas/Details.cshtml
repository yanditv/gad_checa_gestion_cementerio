@model gad_checa_gestion_cementerio.Models.BovedaModel

@{
    ViewData["Title"] = "Detalles de la Bóveda";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3"><i class="ti ti-building-bank text-primary fs-3"></i></span>
            <div>
                <h4 class="mb-1 text-dark">@ViewData["Title"]</h4>
                <p class="mb-0 text-muted small">Información detallada de la bóveda y su propietario.</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Información de la Bóveda -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-info-circle me-2 text-primary"></i>Información de la Bóveda</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-hash text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número</small>
                                        <span class="fw-bold">@Model.Numero</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-numbers text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número Secuencial</small>
                                        <span class="fw-bold">@Model.NumeroSecuencial</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-toggle-left text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Estado</small>
                                        @if (!Model.TieneContratoActivo)
                                        {
                                            <span class="badge bg-success-subtle text-success"><i class="ti ti-check me-1"></i>Disponible</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger-subtle text-danger"><i class="ti ti-x me-1"></i>Ocupada</span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-tag text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Tipo</small>
                                        <span class="fw-bold">@Model.Piso.Bloque.Tipo</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ubicación -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-map-pin me-2 text-primary"></i>Ubicación</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-building text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bloque</small>
                                        <span class="fw-bold">@Model.Piso?.Bloque?.Descripcion</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-layers-difference text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Piso</small>
                                        <span class="fw-bold">@Model.Piso?.NumeroPiso</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-currency-dollar text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Precio Base</small>
                                        <span class="fw-bold">$@Model.Piso?.Precio.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Información del Propietario -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-user me-2 text-primary"></i>Información del Propietario</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Propietario != null)
                        {
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Nombres</small>
                                            <span class="fw-bold">@Model.Propietario.Nombres</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Apellidos</small>
                                            <span class="fw-bold">@Model.Propietario.Apellidos</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-id text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Identificación</small>
                                            <span class="fw-bold">@Model.Propietario.TipoIdentificacion: @Model.Propietario.NumeroIdentificacion</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-phone text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Teléfono</small>
                                            <span class="fw-bold">@Model.Propietario.Telefono</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-mail text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Email</small>
                                            <span class="fw-bold">@Model.Propietario.Email</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-map-pin text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Dirección</small>
                                            <span class="fw-bold">@Model.Propietario.Direccion</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-file-description text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Catastro</small>
                                            <span class="fw-bold">@Model.Propietario.Catastro</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info d-flex align-items-center mb-0">
                                <i class="ti ti-info-circle me-2"></i>Esta bóveda no tiene propietario asignado.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Información del Contrato -->
        @if (Model.Contratos?.FirstOrDefault(c =>
                c.FechaInicio <= DateTime.Now &&
                (c.FechaFin == null || c.FechaFin >= DateTime.Now)) != null)
        {
            var contratoActivo = Model.Contratos.FirstOrDefault(c =>
                c.FechaInicio <= DateTime.Now &&
                (c.FechaFin == null || c.FechaFin >= DateTime.Now));
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-primary text-white border-0 py-2 d-flex align-items-center">
                    <i class="ti ti-file-description me-2 fs-5"></i>
                    <h6 class="mb-0">Contrato Vigente</h6>
                    <span class="badge bg-success ms-2">Activo</span>
                </div>
                <div class="card-body">
                    <div class="row g-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <span class="text-muted small">N° Secuencial Contrato</span><br />
                                <span class="fw-bold fs-5">@contratoActivo.NumeroSecuencial</span>
                            </div>
                            <div class="mb-3">
                                <span class="text-muted small">Fecha de Inicio</span><br />
                                <span class="fw-bold">@contratoActivo.FechaInicio.ToString("dd/MM/yyyy")</span>
                            </div>
                            <div class="mb-3">
                                <span class="text-muted small">Fecha de Vencimiento</span><br />
                                <span class="fw-bold">@(contratoActivo.FechaFin == null ? "Indefinido" : ((DateTime)contratoActivo.FechaFin).ToString("dd/MM/yyyy"))</span>
                            </div>
                            <div class="mb-3">
                                <span class="text-muted small">Valor del Contrato</span><br />
                                <span class="fw-bold text-primary fs-5">$@contratoActivo.MontoTotal.ToString("N2")</span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <span class="text-muted small">¿Es Renovación?</span><br />
                                <span class="fw-bold">@(contratoActivo.EsRenovacion ? "Sí" : "No")</span>
                            </div>
                            <div class="mb-3">
                                <span class="text-muted small">Veces Renovado</span><br />
                                <span class="fw-bold">@contratoActivo.VecesRenovado</span>
                            </div>
                            <div class="mb-3">
                                <span class="text-muted small">Observaciones</span><br />
                                <span class="fw-bold">@contratoActivo.Observaciones</span>
                            </div>
                            @if (!string.IsNullOrEmpty(contratoActivo.PathDocumentoFirmado))
                            {
                                <div class="mb-3">
                                    <span class="text-muted small">Documento Firmado</span><br />
                                    <a href="@Url.Content(contratoActivo.PathDocumentoFirmado)" target="_blank" class="fw-bold text-decoration-underline text-info">
                                        <i class="ti ti-link"></i> Ver documento
                                    </a>
                                </div>
                            }
                        </div>
                    </div>
                    <hr />
                    <div class="row g-4">
                        <!-- Difunto -->
                        @if (contratoActivo.Difunto != null)
                        {
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-info text-white border-0 py-2 d-flex align-items-center">
                                        <i class="ti ti-user me-2"></i>
                                        <span>Difunto Asociado</span>
                                    </div>
                                    <div class="card-body">
                                        <div class="mb-2"><span class="text-muted small">Nombres</span><br /><span class="fw-bold">@contratoActivo.Difunto.Nombres @contratoActivo.Difunto.Apellidos</span></div>
                                        <div class="mb-2"><span class="text-muted small">Identificación</span><br /><span class="fw-bold">@contratoActivo.Difunto.NumeroIdentificacion</span></div>
                                        <div class="mb-2"><span class="text-muted small">Fecha de Nacimiento</span><br /><span class="fw-bold">@contratoActivo.Difunto.FechaNacimiento.ToString("dd/MM/yyyy")</span></div>
                                        <div class="mb-2"><span class="text-muted small">Fecha de Fallecimiento</span><br /><span class="fw-bold">@contratoActivo.Difunto.FechaFallecimiento.ToString("dd/MM/yyyy")</span></div>
                                        <div class="mb-2"><span class="text-muted small">Descuento</span><br /><span class="fw-bold badge bg-warning text-dark">@contratoActivo.Difunto.Descuento?.Descripcion (@contratoActivo.Difunto.Descuento?.Porcentaje ?? 0)%</span></div>
                                    </div>
                                </div>
                            </div>
                        }
                        <!-- Responsables -->
                        @if (contratoActivo.Responsables != null && contratoActivo.Responsables.Any())
                        {
                            <div class="col-md-6">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-header bg-secondary text-white border-0 py-2 d-flex align-items-center">
                                        <i class="ti ti-users me-2"></i>
                                        <span>Responsables</span>
                                    </div>
                                    <div class="card-body">
                                        @foreach (var resp in contratoActivo.Responsables)
                                        {
                                            <div class="mb-2 border-bottom pb-2">
                                                <div class="fw-bold">@resp.Nombres @resp.Apellidos</div>
                                                <div class="small text-muted">@resp.TipoIdentificacion: @resp.NumeroIdentificacion</div>
                                                <div class="small"><i class="ti ti-phone"></i> @resp.Telefono</div>
                                                <div class="small"><i class="ti ti-mail"></i> @resp.Email</div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                    <!-- Cuotas -->
                    @if (contratoActivo.Cuotas != null && contratoActivo.Cuotas.Any())
                    {
                        <div class="card border-0 shadow-sm mt-4">
                            <div class="card-header bg-warning text-dark border-0 py-2 d-flex align-items-center">
                                <i class="ti ti-currency-dollar me-2"></i>
                                <span>Cuotas del Contrato</span>
                            </div>
                            <div class="card-body p-0">
                                <div class="table-responsive">
                                    <table class="table table-sm table-bordered mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th>Vencimiento</th>
                                                <th>Monto</th>
                                                <th>Estado</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var cuota in contratoActivo.Cuotas)
                                            {
                                                <tr>
                                                    <td>@cuota.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                                    <td><span class="fw-bold">$@cuota.Monto.ToString("N2")</span></td>
                                                    <td>
                                                        @if (cuota.Pagada)
                                                        {
                                                            <span class="badge bg-success">Pagada</span>
                                                        }
                                                        else
                                                        {
                                                            <span class="badge bg-danger">Pendiente</span>
                                                        }
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        <!-- Botones de Acción -->
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="ti ti-edit me-1"></i>Editar
            </a>
        </div>
    </div>
</div>
</div>