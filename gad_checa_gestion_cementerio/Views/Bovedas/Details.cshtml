@model gad_checa_gestion_cementerio.Models.BovedaModel

@{
    ViewData["Title"] = "Detalles de la Bóveda";
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3"><i class="ti ti-building-bank text-primary fs-3"></i></span>
            <div>
                <h4 class="mb-1 text-dark">@ViewData["Title"]</h4>
                <p class="mb-0 text-muted small">Información detallada de la bóveda y su propietario.</p>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="row g-4">
            <!-- Información de la Bóveda -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-info-circle me-2 text-primary"></i>Información de la Bóveda
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-hash text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número</small>
                                        <span class="fw-bold">@Model.Numero</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-numbers text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Número Secuencial</small>
                                        <span class="fw-bold">@Model.NumeroSecuencial</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-toggle-left text-primary me-2"></i>
                                    <div class="info-estado">
                                        @if (!Model.Estado || (Model.Contratos != null && Model.Contratos.Any()))
                                        {
                                            <span class="badge bg-danger-subtle text-danger border border-danger px-3 py-2">
                                                <i class="ti ti-lock me-1"></i> OCUPADA
                                            </span>
                                        }
                                        else
                                        {
                                            <span
                                                class="badge bg-success-subtle text-success border border-success px-3 py-2">
                                                <i class="ti ti-check me-1"></i> DISPONIBLE
                                            </span>
                                        }
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-tag text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Tipo</small>
                                        <span class="fw-bold">@Model.Piso.Bloque.Tipo</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- Ubicación -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-map-pin me-2 text-primary"></i>Ubicación</h6>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-building text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Bloque</small>
                                        <span class="fw-bold">@Model.Piso?.Bloque?.Descripcion</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-layers-difference text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Piso</small>
                                        <span class="fw-bold">@Model.Piso?.NumeroPiso</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="d-flex align-items-center">
                                    <i class="ti ti-currency-dollar text-primary me-2"></i>
                                    <div>
                                        <small class="text-muted d-block">Precio Base</small>
                                        <span class="fw-bold">$@Model.Piso?.Precio.ToString("N2")</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Información del Propietario -->
            <div class="col-md-6">
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-header bg-light border-0 py-2">
                        <h6 class="mb-0"><i class="ti ti-user me-2 text-primary"></i>Información del Propietario</h6>
                    </div>
                    <div class="card-body">
                        @if (Model.Propietario != null)
                        {
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Nombres</small>
                                            <span class="fw-bold">@Model.Propietario.Nombres</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-user text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Apellidos</small>
                                            <span class="fw-bold">@Model.Propietario.Apellidos</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-id text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Identificación</small>
                                            <span class="fw-bold">@Model.Propietario.TipoIdentificacion:
                                                @Model.Propietario.NumeroIdentificacion</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-phone text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Teléfono</small>
                                            <span class="fw-bold">@Model.Propietario.Telefono</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-mail text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Email</small>
                                            <span class="fw-bold">@Model.Propietario.Email</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-map-pin text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Dirección</small>
                                            <span class="fw-bold">@Model.Propietario.Direccion</span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="d-flex align-items-center">
                                        <i class="ti ti-file-description text-primary me-2"></i>
                                        <div>
                                            <small class="text-muted d-block">Catastro</small>
                                            <span class="fw-bold">@Model.Propietario.Catastro</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="alert alert-info d-flex align-items-center mb-0">
                                <i class="ti ti-info-circle me-2"></i>Esta bóveda no tiene propietario asignado.
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Información del Contrato -->
        @if (Model.Contratos != null && Model.Contratos.Any())
        {
            <div class="card border-0 shadow-sm mt-4">
                <div class="card-header bg-light border-0 py-2">
                    <h6 class="mb-0"><i class="ti ti-file-text me-2 text-primary"></i>Historial de Contratos / Ocupantes
                    </h6>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover align-middle">
                            <thead class="table-light">
                                <tr>
                                    <th>Nro. Contrato</th>
                                    <th>Difunto</th>
                                    <th>Vigencia</th>
                                    <th>Estado</th>
                                    <th>Responsable</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var contrato in Model.Contratos.OrderByDescending(c => c.FechaInicio))
                                {
                                    <tr>
                                        <td><span class="fw-bold">@contrato.NumeroSecuencial</span></td>
                                        <td>
                                            @if (contrato.Difunto != null)
                                            {
                                                @($"{contrato.Difunto.Nombres} {contrato.Difunto.Apellidos}")
                                            }
                                            else
                                            {
                                                <span class="text-muted">DIFUNTO DESCONOCIDO</span>
                                            }
                                        </td>
                                        <td>
                                            <small>
                                                @* Como FechaInicio y FechaFin NO son nullables, accedemos directo *@
                                                @contrato.FechaInicio.ToShortDateString() -
                                                @contrato.FechaFin.ToShortDateString()
                                            </small>
                                        </td>
                                        <td>
                                            @* Lógica de vencimiento para la migración *@
                                            @if (contrato.FechaFin < DateTime.Now)
                                            {
                                                <span class="badge bg-danger-subtle text-danger border border-danger">Vencido / Por
                                                    Liberar</span>
                                            }
                                            else
                                            {
                                                <span
                                                    class="badge bg-success-subtle text-success border border-success">Vigente</span>
                                            }
                                        </td>
                                        <td>
                                            @if (contrato.Responsables != null && contrato.Responsables.Any())
                                            {
                                                var resp = contrato.Responsables.First();
                                                @($"{resp.Nombres} {resp.Apellidos}")
                                            }
                                            else
                                            {
                                                @* Si no hay responsable, mostramos el propietario o un texto de sistema *@
                                                @(Model.Propietario?.Nombres ?? "MIGRACIÓN")
                                            }
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info mt-4">
                <i class="ti ti-info-circle me-2"></i> Esta bóveda no tiene contratos registrados (Disponible).
            </div>
        }
        <!-- Botones de Acción -->
        <div class="d-flex justify-content-end gap-2 mt-4">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="ti ti-arrow-left me-1"></i>Volver
            </a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-outline-primary">
                <i class="ti ti-edit me-1"></i>Editar
            </a>
        </div>
    </div>
</div>
</div>