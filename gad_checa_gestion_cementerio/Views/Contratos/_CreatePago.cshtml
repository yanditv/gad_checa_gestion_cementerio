@model gad_checa_gestion_cementerio.Models.PagoModel
@{
    ViewData["Title"] = "Crear Pago";
}
<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex align-items-center">
            <span class="me-3">
                <i class="ti ti-cash-banknote text-primary fs-4"></i>
            </span>
            <div>
                <h4 class="mb-1 text-dark">Datos del Pago</h4>
                <p class="mb-0 text-muted small">Complete la información del pago y seleccione las cuotas a abonar</p>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="CreatePago" method="post">
            <div class="row g-3">
                <div class="col-md-6">
                    <label asp-for="TipoPago" class="form-label fw-semibold">
                        <i class="ti ti-credit-card text-primary me-1"></i>
                        Tipo de Pago
                    </label>
                    <select asp-for="TipoPago" class="form-select" asp-items="ViewBag.TiposPago"></select>
                    <span asp-validation-for="TipoPago" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label class="form-label fw-semibold">
                        <i class="ti ti-file-invoice text-primary me-1"></i>
                        Número de Comprobante
                    </label>
                    <input name="NumeroComprobante" class="form-control" />
                    <span class="text-danger small"></span>
                </div>
            </div>
            <div class="row g-3 mt-2">
                <div class="col-md-6">
                    <label asp-for="Monto" class="form-label fw-semibold">
                        <i class="ti ti-currency-dollar text-primary me-1"></i>
                        Monto
                    </label>
                    <input asp-for="Monto" class="form-control" readonly />
                    <span asp-validation-for="Monto" class="text-danger small"></span>
                </div>
                <div class="col-md-6">
                    <label asp-for="FechaPago" class="form-label fw-semibold">
                        <i class="ti ti-calendar-event text-primary me-1"></i>
                        Fecha de Pago
                    </label>
                    <input asp-for="FechaPago" type="date" class="form-control" />
                    <span asp-validation-for="FechaPago" class="text-danger small"></span>
                </div>
            </div>
            <div class="bg-light p-3 mb-3 mt-4 rounded-3">
                <h5 class="mb-1"><i class="ti ti-list-details text-primary me-1"></i>Cuotas por Pagar</h5>
                <p class="text-muted mb-2">Selecciona la(s) cuota(s) que deseas pagar</p>
                <div class="table-responsive">
                    <table class="table align-middle mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Seleccionar</th>
                                <th>Fecha de Vencimiento</th>
                                <th>Monto</th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.Cuotas.Count; i++)
                            {
                                <tr>
                                    <td>
                                        <input type="checkbox" name="CuotasSeleccionadas" value="@Model.Cuotas[i].TempId"
                                            class="js-cuota-checkbox"
                                            data-monto="@Model.Cuotas[i].Monto.ToString(System.Globalization.CultureInfo.InvariantCulture)" />
                                    </td>
                                    <td>@Model.Cuotas[i].FechaVencimiento.ToString("dd/MM/yyyy")</td>
                                    <td>$@Model.Cuotas[i].Monto.ToString("N2")</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="d-flex justify-content-end align-items-center mt-3">
                    <span class="fw-semibold me-2">Total a Pagar:</span>
                    <span class="fs-5 text-primary" id="totalCuotas">$0.00</span>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {

}

@section Styles {
    <style>
        .avatar-circle {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: bold;
            font-size: 1rem;
        }
    </style>
}