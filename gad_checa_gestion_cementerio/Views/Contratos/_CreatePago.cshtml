@model gad_checa_gestion_cementerio.Data.Pago
@{
    ViewData["Title"] = "Crear Difunto";
}
<div class="p-4 bg-gray-50 border-gray-200 flex h-auto items-start justify-start rounded-xl border border-dashed dark:bg-neutral-700 dark:border-neutral-600">
    <div class="w-full max-w-2xl">
        <div class="px-5 py-10 relative w-full rounded-3xl sm:p-5">
            <div class="max-w-full text-left">
                <h2 class="text-gray-700 mb-2 text-xl font-semibold">Datos del Pago</h2>
                <p class="mb-6 text-sm text-[#6A717D]">Asegúrate de completar los campos necesarios</p>

                <form asp-action="CreatePago" method="post" class="space-y-4">
                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Método de Pago</label>
                    <select name="MetodoPago" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        <option value="">Seleccione un método de pago</option>
                        <option value="Efectivo">Efectivo</option>
                        <option value="Tarjeta">Tarjeta</option>
                        <option value="Banco">Banco</option>
                    </select>
                    <span class="text-red-500 text-sm"></span>
                </div>

                <div class="mb-4">
                    <label class="block text-sm font-medium text-gray-700">Número de Comprobante</label>
                    <input name="NumeroComprobante" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                    @* <span class="text-red-500 text-sm"></span> *@
                </div>

                <div class="mb-4" id="banco-section" style="display:none;">
                    <label class="block text-sm font-medium text-gray-700">Banco</label>
                    <select name="Banco" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm">
                        <option value="">Seleccione un banco</option>
                        <option value="Banco1">Banco 1</option>
                        <option value="Banco2">Banco 2</option>
                        <option value="Banco3">Banco 3</option>
                    </select>
                    <span class="text-red-500 text-sm"></span>
                </div>

                @section Scripts {
                    <script>
                        document.querySelector('[name="MetodoPago"]').addEventListener('change', function () {
                            var bancoSection = document.getElementById('banco-section');
                            if (this.value === 'Banco') {
                                bancoSection.style.display = 'block';
                            } else {
                                bancoSection.style.display = 'none';
                            }
                        });
                    </script>
                }

                    <div class="mb-4">
                        <label asp-for="Monto" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="Monto" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        <span asp-validation-for="Monto" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="FechaPago" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="FechaPago" type="date" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        <span asp-validation-for="FechaPago" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="mb-4">
                        <label asp-for="PersonaPagoId" class="block text-sm font-medium text-gray-700"></label>
                        <input asp-for="PersonaPagoId" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        <span asp-validation-for="PersonaPagoId" class="text-red-500 text-sm"></span>
                    </div>
                    <div class="flex justify-end">
                        <button type="submit" class="inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-indigo-600 hover:bg-indigo-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                            Guardar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
