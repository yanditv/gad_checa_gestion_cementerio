@model gad_checa_gestion_cementerio.Data.Responsable

<div class="fixed z-10 inset-0 overflow-y-auto" aria-labelledby="modal-title" role="dialog" aria-modal="true" id="addResponsableModal">
    <div class="flex items-end justify-center min-h-screen pt-4 px-4 pb-20 text-center sm:block sm:p-0">
        <div class="fixed inset-0 bg-gray-500 bg-opacity-75 transition-opacity" aria-hidden="true"></div>
        <span class="hidden sm:inline-block sm:align-middle sm:h-screen" aria-hidden="true">&#8203;</span>
        <div class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl transform transition-all sm:my-8 sm:align-middle sm:max-w-lg sm:w-full">
            <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
                <div class="sm:flex sm:items-start">
                    <div class="mt-3 text-center sm:mt-0 sm:ml-4 sm:text-left">
                        <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">Agregar Responsable</h3>
                        <div class="mt-2">
                            <form id="addResponsableForm">
                                <div class="form-group">
                                    <label asp-for="Nombres" class="block text-sm font-medium text-gray-700"></label>
                                    <input asp-for="Nombres" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" />
                                    <span asp-validation-for="Nombres" class="text-red-500 text-sm"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Apellidos" class="block text-sm font-medium text-gray-700"></label>
                                    <input asp-for="Apellidos" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" />
                                    <span asp-validation-for="Apellidos" class="text-red-500 text-sm"></span>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Telefono" class="block text-sm font-medium text-gray-700"></label>
                                    <input asp-for="Telefono" class="mt-1 block w-full rounded-md border-gray-300 shadow-sm sm:text-sm" />
                                    <span asp-validation-for="Telefono" class="text-red-500 text-sm"></span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
                <button type="button" class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-blue-500 text-base font-medium text-white hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 sm:ml-3 sm:w-auto sm:text-sm" id="saveResponsableButton">Guardar</button>
                <button type="button" class="mt-3 w-full inline-flex justify-center rounded-md border border-gray-300 shadow-sm px-4 py-2 bg-white text-base font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500 sm:mt-0 sm:w-auto sm:text-sm" data-dismiss="modal">Cancelar</button>
            </div>
        </div>
    </div>
</div>