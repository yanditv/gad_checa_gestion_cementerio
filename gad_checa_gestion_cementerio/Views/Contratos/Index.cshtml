@model gad_checa_gestion_cementerio.Models.Listas.ContratoPaginadaViewModel

@{
    ViewData["Title"] = "Gestión de Contratos";

    // Obtener estadísticas de contratos para mostrar en el dashboard
    var totalContratos = Model.Contratos?.Count() ?? 0;
    var contratosActivos = Model.Contratos?.Count(c => c.Estado) ?? 0;
    var contratosRenovados = Model.Contratos?.Count(c => c.EsRenovacion) ?? 0;

    // Obtener información del cementerio
    var cementerio = ViewBag.Cementerio;
}

<!-- TARJETAS DE ESTADÍSTICAS -->
<div class="row">
    <!-- Total de Contratos -->
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <h6 class="mb-2 f-w-400 text-muted">Total de Contratos</h6>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">@Model.TotalResultados</h4>
                    <span class="badge bg-light-primary border border-primary">
                        <i class="ti ti-file-text"></i>
                    </span>
                </div>
                <p class="mb-0 text-muted text-sm">
                    Contratos <span class="text-primary">registrados</span> en el sistema
                </p>
            </div>
        </div>
    </div>

    <!-- Contratos Activos -->
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <h6 class="mb-2 f-w-400 text-muted">Contratos Activos</h6>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">@contratosActivos</h4>
                    <span class="badge bg-light-success border border-success">
                        <i class="ti ti-check-circle"></i>
                    </span>
                </div>
                <p class="mb-0 text-muted text-sm">
                    Contratos <span class="text-success">vigentes</span> actualmente
                </p>
            </div>
        </div>
    </div>

    <!-- Renovaciones -->
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <h6 class="mb-2 f-w-400 text-muted">Renovaciones</h6>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <h4 class="mb-0">@contratosRenovados</h4>
                    <span class="badge bg-light-info border border-info">
                        <i class="ti ti-repeat"></i>
                    </span>
                </div>
                <p class="mb-0 text-muted text-sm">
                    Contratos <span class="text-info">renovados</span> registrados
                </p>
            </div>
        </div>
    </div>

    <!-- Configuración de Renovaciones -->
    <div class="col-md-6 col-xl-3">
        <div class="card">
            <div class="card-body">
                <h6 class="mb-2 f-w-400 text-muted">Límites de Renovación</h6>
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div class="text-center">
                        <div class="d-flex align-items-center gap-2 mb-2">
                            <span class="badge bg-warning">@ViewBag.MaxRenovacionesBovedas</span>
                            <span class="text-muted small">Bóvedas</span>
                        </div>
                        <div class="d-flex align-items-center gap-2">
                            <span class="badge bg-secondary">@ViewBag.MaxRenovacionesNichos</span>
                            <span class="text-muted small">Nichos</span>
                        </div>
                    </div>
                    <span class="badge bg-light-warning border border-warning">
                        <i class="ti ti-settings"></i>
                    </span>
                </div>
                <p class="mb-0 text-muted text-sm">
                    Configuración <span class="text-warning">actual</span> del cementerio
                </p>
            </div>
        </div>
    </div>
</div>

<!-- ACCESOS RÁPIDOS Y FILTROS -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex flex-wrap justify-content-between align-items-center">
                    <div>
                        <h5 class="mb-1">
                            <i class="ti ti-file-text me-2"></i>
                            @ViewData["Title"]
                        </h5>
                        <p class="text-muted mb-0 small">
                            Gestione contratos y sus renovaciones según los límites configurados.
                        </p>
                    </div>
                    <div class="d-flex gap-2 align-items-center mt-3 mt-md-0 flex-wrap">
                        <!-- Botón Nuevo Contrato -->
                        <a asp-action="Create" class="btn btn-primary d-flex align-items-center">
                            <i class="ti ti-plus me-2"></i> Nuevo Contrato
                        </a>
                    </div>
                </div>
            </div>

            <div class="card-body">
                <!-- Filtros de Búsqueda -->
                <form asp-action="Index" method="get" class="row g-3 align-items-end">
                    <div class="col-md-8">
                        <label class="form-label">Buscar contratos</label>
                        <div class="input-group">
                            <span class="input-group-text">
                                <i class="ti ti-search"></i>
                            </span>
                            <input type="text" name="Filtro" value="@ViewBag.Filtro"
                                placeholder="Buscar por número, nombre o difunto..."  class="form-control form-control-sm" />
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="d-flex gap-2">
                            <button type="submit" class="btn btn-success flex-fill">
                                <i class="ti ti-filter me-1"></i> Filtrar
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary">
                                <i class="ti ti-x me-1"></i> Limpiar
                            </a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- LISTADO DE CONTRATOS -->
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body p-0">
                @await Html.PartialAsync("_ListaContratos", Model.Contratos)
            </div>

                        @if (Model.TotalResultados > 0)
            {
                    <div class="card-footer bg-transparent">
                        @await Html.PartialAsync("_Paginacion", Model)
                    </div>
            }
        </div>
    </div>
</div>
