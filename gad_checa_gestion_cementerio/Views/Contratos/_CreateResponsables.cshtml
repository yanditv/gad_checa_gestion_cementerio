@using System.Globalization
@model List<gad_checa_gestion_cementerio.Models.ResponsableModel>

@{
    ViewData["Title"] = "Asignar Responsables";
}

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="h4 mb-0 text-white">Datos de los responsables del Difunto</h2>
        </div>
        <div class="card-body">
            <p class="text-muted mb-4">Asegúrate de completar los campos necesarios</p>

            <div class="mb-4">
                <label class="form-label">Buscar Responsable</label>
                <div class="input-group">
                    <select class="form-select" id="searchResponsable">
                        <option></option>
                        @foreach (var persona in ViewBag.Personas ?? new List<ResponsableModel>())
                        {
                            <option value="@persona.Id"
                                    data-nombres="@persona.Nombres"
                                    data-apellidos="@persona.Apellidos"
                                    data-tipo="@persona.TipoIdentificacion"
                                    data-numero="@persona.NumeroIdentificacion">
                                @($"{persona.Nombres} {persona.Apellidos} - {persona.TipoIdentificacion}: {persona.NumeroIdentificacion}")
                            </option>
                        }
                    </select>
                    <button type="button" class="btn btn-success" onclick="abrirModal()">
                        <i class="ti ti-plus"></i>
                    </button>
                </div>
            </div>

            <div id="responsablesContainer">
                @for (int i = 0; i < Model.Count; i++)
                {
                    <div class="responsable mb-4" data-id="@Model[i].Id">
                        <div class="card border-0 shadow-sm">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-8">
                                        <div class="d-flex align-items-center">
                                            <i class="ti ti-user me-2 fs-4"></i>
                                            <div class="flex-grow-1">
                                                <h5 class="mb-1">@Model[i].Nombres @Model[i].Apellidos</h5>
                                                <p class="mb-0 text-muted">
                                                    @Model[i].TipoIdentificacion: @Model[i].NumeroIdentificacion
                                                </p>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="row">
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Fecha Inicio</label>
                                                    <input type="date" class="form-control fecha-inicio"
                                                        value="@Model[i].FechaInicio.ToString("yyyy-MM-dd")" />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="mb-3">
                                                    <label class="form-label">Fecha Fin</label>
                                                    <input type="date" class="form-control fecha-fin"
                                                        value="@(Model[i].FechaFin.HasValue ? Model[i].FechaFin.Value.ToString("yyyy-MM-dd", CultureInfo.InvariantCulture) : "")" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="text-end mt-2">
                                    <button type="button" class="btn btn-danger btn-sm js-remove-responsable">
                                        <i class="ti ti-trash me-1"></i>Quitar
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_AddResponsableModal", new gad_checa_gestion_cementerio.Models.ResponsableModel())