@model IEnumerable<gad_checa_gestion_cementerio.Models.ContratoModel>
<div class="table-responsive"></div>
<table class="table table-bordered table-hover mb-0">
    <thead class="table-secondary small">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NumeroSecuencial)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaInicio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FechaFin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MontoTotal)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Difunto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Observaciones)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody class="small">
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NumeroSecuencial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FechaFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MontoTotal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Difunto.NombresCompletos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Observaciones)
                </td>
                <td>
                    @* <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a> *@
                    <a asp-action="Create" asp-route-idContrato="@item.Id" class="btn btn-sm btn-outline-danger me-1"
                        title="Renovar">
                        <i class="ti ti-repeat"></i> Renovar Contrato
                    </a>
                    @if (string.IsNullOrEmpty(item.PathDocumentoFirmado))
                    {
                        <a asp-action="SubirDocumento" asp-route-idContrato="@item.Id" class="btn btn-sm btn-outline-primary"
                            title="Subir Documento">
                            <i class="ti ti-upload"></i> Subir Documento
                        </a>
                    }
                    else
                    {
                        <a asp-action="SubirDocumento" asp-route-idContrato="@item.Id" class="btn btn-sm btn-outline-success"
                            title="Ver Documento">
                            <i class="ti ti-file-text"></i>Ver Documento
                        </a>
                    }
                </td>
            </tr>
        }
</table>
</div>