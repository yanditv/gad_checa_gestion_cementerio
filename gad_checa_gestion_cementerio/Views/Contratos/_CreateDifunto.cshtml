@model gad_checa_gestion_cementerio.Data.Difunto
@{
    ViewData["Title"] = "Crear Difunto";
}

    <div class="p-4 bg-gray-50 border-gray-200 flex h-auto items-start justify-start rounded-xl border border-dashed dark:bg-neutral-700 dark:border-neutral-600">
        <div class="w-full max-w-2xl">
            <div class="px-5 py-10 relative w-full rounded-3xl sm:p-5">
                <div class="max-w-full text-left">
                    <h2 class="text-gray-700 mb-2 text-xl font-semibold">Datos del Difunto</h2>
                    <p class="mb-6 text-sm text-[#6A717D]">Asegúrate de completar los campos necesarios</p>

                    <form>
                        <div asp-validation-summary="ModelOnly" class="text-red"></div>

                        <div class="mb-4 flex flex-col">
                            <label asp-for="NumeroIdentificacion" class="text-gray-700 block text-sm font-medium">Cedula</label>
                            <input type="text" id="cedula" name="cedula" class="form-control mt-1 border-gray-300 block w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        </div>
                        <div class="mb-4 flex flex-col">
                            <label  asp-for="Nombres" class="text-gray-700 block text-sm font-medium">Nombres</label>
                            <input type="text" id="Nombres" name="Nombres" class="form-control mt-1 border-gray-300 block w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        </div>
                        <div class="mb-4 flex flex-col">
                            <label  asp-for="Apellidos" class="text-gray-700 block text-sm font-medium">Apellidos</label>
                            <input type="text" id="Apellidos" name="Apellidos" class="form-control mt-1 border-gray-300 block w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        </div>
                        <div class="mb-4 flex flex-col">
                            <label for="FechaNacimiento" class="text-gray-700 block text-sm font-medium">Fecha de Nacimiento</label>
                            <input type="date" id="FechaNacimiento" name="FechaNacimiento" class="form-control mt-1 border-gray-300 block w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        </div>
                        <div class="mb-4 flex flex-col">
                            <label for="fechaDefuncion" class="text-gray-700 block text-sm font-medium">Fecha de Defunción</label>
                            <input type="date" id="fechaDefuncion" name="fechaDefuncion" class="form-control mt-1 border-gray-300 block w-full rounded-md shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>