@model List<gad_checa_gestion_cementerio.Models.Views.ReporteIngresoPorFechaViewModel>

@{
    ViewData["Title"] = "IngresosPorFecha";
    ViewData["EntityType"] = "IngresosPorFecha";
    Layout = "~/Views/Reportes/_ReportesLayout.cshtml";
}

<div class="min-h-screen bg-white p-6 flex flex-col items-center">

    <h2 class="text-gray-700 mb-6 text-2xl font-semibold">Reporte de BÃ³vedas</h2>

    <div class="mb-4">
        <form method="get" asp-action="IngresosPorFechaPdf">
            <div class="flex items-center space-x-2 mb-2">
                <label for="fechaInicio" class="block text-gray-700 text-sm font-bold">Desde:</label>
                <input type="date" id="fechaInicio" name="fechaInicio"
                    class="shadow appearance-none border rounded w-auto py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <div class="flex items-center space-x-2 mb-2">
                <label for="fechaFin" class="block text-gray-700 text-sm font-bold">Hasta:</label>
                <input type="date" id="fechaFin" name="fechaFin"
                    class="shadow appearance-none border rounded w-auto py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline">
            </div>
            <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
                Generar PDF
            </button>
        </form>
    </div>



    <div class="overflow-x-auto">
        <table class=" table-auto border border-gray-200 shadow-sm rounded-lg" style="width:80%; text-align: center;">
            <thead class="bg-gray-100">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Fecha</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Boveda</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Tipo de Ingreso</th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase">Total</th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="px-6 py-4 text-sm text-gray-900">@item.Fecha.ToShortDateString()</td>
                        <td class="px-6 py-4 text-sm text-gray-900">@item.Boveda</td>
                        <td class="px-6 py-4 text-sm text-gray-900">@item.TipoIngreso</td>
                        <td class="px-6 py-4 text-sm text-gray-900">@item.Total</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>