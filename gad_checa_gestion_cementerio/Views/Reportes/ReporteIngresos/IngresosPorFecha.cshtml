@model List<gad_checa_gestion_cementerio.Models.Views.ReporteIngresoPorFechaViewModel>

@{
    ViewData["Title"] = "Reporte de Ingresos por Fechas";
    ViewData["EntityType"] = "IngresosPorFecha";
    Layout = "~/Views/Reportes/_ReportesLayout.cshtml";
}

<div class="card">
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <div>
            <h4 class="card-title mb-2">@ViewData["Title"]</h4>
            <p class="text-muted">
                Visualice y gestione los ingresos. Puede filtrar por un rango de fechas.
            </p>
        </div>

        <div class="d-flex gap-2 align-items-center mt-3 mt-md-0 flex-nowrap overflow-auto">
            <!-- Filtros -->
            <form asp-action="IngresosPorFecha" method="get" class="d-flex gap-2 align-items-center flex-nowrap">
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Desde</span>
                    <input type="date" name="fechaInicio" value="@ViewBag.Desde" class="form-control form-control-sm"
                        required />
                </div>
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Hasta</span>
                    <input type="date" name="fechaFin" value="@ViewBag.Hasta" class="form-control form-control-sm"
                        required />
                </div>
                <button type="submit" class="btn btn-success btn-sm d-flex align-items-center">
                    <i class="ti ti-filter me-1"></i> Filtrar
                </button>
            </form>

            <!-- Botón PDF -->
            <form method="get" asp-action="IngresosPorFechaPdf" class="d-flex">
                <input type="hidden" name="fechaInicio" value="@ViewBag.Desde" />
                <input type="hidden" name="fechaFin" value="@ViewBag.Hasta" />
                <button type="submit" class="btn btn-primary btn-sm d-flex align-items-center">
                    <i class="ti ti-download me-1"></i> Generar PDF
                </button>
            </form>
        </div>
    </div>


    <div class="table-responsive">
        <table class="table table-bordered table-hover mb-0">
            <thead class="table-secondary small">
                <tr>
                    <th scope="col">Fecha</th>
                    <th scope="col">Tipo Ingreso</th>
                    <th scope="col">Tipo Pago</th>
                    <th scope="col">Comprobante</th>
                    <th scope="col">Monto</th>
                    <th scope="col">Responsable</th>
                    <th scope="col">Identificación</th>
                    <th scope="col">Contrato</th>
                    <th scope="col">Bóveda</th>
                    <th scope="col">Piso</th>
                    <th scope="col">Bloque</th>
                </tr>
            </thead>
            <tbody class="small">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FechaPago.ToShortDateString()</td>
                        <td>@item.TipoIngreso</td>
                        <td>@item.TipoPago</td>
                        <td>@item.NumeroComprobante</td>
                        <td>$@item.Monto.ToString("F2")</td>
                        <td>@item.PagadoPor</td>
                        <td>@item.IdentificacionPagador</td>
                        <td>@item.NumeroContrato</td>
                        <td>@item.Boveda</td>
                        <td>@item.Piso</td>
                        <td>@item.Bloque</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
