@model gad_checa_gestion_cementerio.Models.PersonaModel

@{
    ViewData["Title"] = "Create Persona";
}

<div class="bg-white px-2 flex min-h-screen justify-start rounded-3xl sm:px-10">
    <div class="py-3 w-full justify-start sm:max-w-2xl">
        <div class="px-5 py-10 relative w-full rounded-3xl sm:p-5">
            <div class="max-w-full text-left">
                <h2 class="text-gray-700 mb-2 text-xl font-semibold">Crear Persona</h2>
                <p class="mb-6 text-sm text-[#6A717D]">Asegúrate de completar los campos necesarios</p>
                <form asp-action="Create" class="space-y-5">
                    <div asp-validation-summary="ModelOnly" class="text-red-500"></div>

                    <div class="flex flex-col">
                        <label asp-for="Nombres" class="text-gray-700">Nombres</label>
                        <input asp-for="Nombres" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="Nombres" class="text-red-500"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="Apellidos" class="text-gray-700">Apellidos</label>
                        <input asp-for="Apellidos" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="Apellidos" class="text-red-500"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="TipoIdentificacion" class="control-label"></label>
                        <select asp-for="TipoIdentificacion" class="form-control" asp-items="ViewBag.TiposIdentificacion"></select>
                        <span asp-validation-for="TipoIdentificacion" class="text-danger"></span>
                    </div>
                    <div class="flex flex-col">
                        <label asp-for="NumeroIdentificacion" class="text-gray-700">Cédula</label>
                        <input asp-for="NumeroIdentificacion" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="NumeroIdentificacion" class="text-red-500"></span>
                    </div>

                    <div class="flex flex-col">
                        <label asp-for="Telefono" class="text-gray-700">Número de Contacto</label>
                        <input asp-for="Telefono" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="Telefono" class="text-red-500"></span>
                    </div>

                    <div class="flex flex-col">
                        <label asp-for="Email" class="text-gray-700">Correo Electrónico</label>
                        <input asp-for="Email" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="Email" class="text-red-500"></span>
                    </div>

                    <div class="flex flex-col">
                        <label asp-for="Direccion" class="text-gray-700">Dirección</label>
                        <input asp-for="Direccion" class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
                        <span asp-validation-for="Direccion" class="text-red-500"></span>
                    </div>

                    <div class="pt-6 space-x-4 flex items-center">
                        <a asp-action="Index" class="text-white bg-gray-900 px-4 py-3 flex items-center justify-center rounded-md focus:outline-none">Cancelar</a>
                        <input type="submit" value="Guardar" class="bg-blue-700 text-white px-4 py-3 flex items-center justify-center rounded-md focus:outline-none" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
