@model gad_checa_gestion_cementerio.Models.Listas.PersonaPaginadaViewModel
@{
    ViewData["Title"] = "Personas";
}

<div class="card">
    <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
        <div>
            <h4 class="card-title mb-2">@ViewData["Title"]</h4>
            <p class="text-muted">
                Visualice y gestione los ingresos. Puede filtrar por un rango de fechas.
            </p>
        </div>

        <div class="d-flex gap-2 align-items-center mt-3 mt-md-0 flex-nowrap overflow-auto">
            <!-- Filtros -->
            <form asp-action="Index" method="get" class="d-flex gap-2 align-items-center flex-nowrap">
                <div class="input-group input-group-sm">
                    <span class="input-group-text">Filtro</span>
                    <input type="text" name="Filtro" value="@ViewBag.Filtro"
                        placeholder="Número de contrato, nombres del difunto" class="form-control form-control-sm" />
                </div>
                <button type="submit" class="btn btn-success btn-sm d-flex align-items-center">
                    <i class="ti ti-filter me-1"></i> Filtrar
                </button>
            </form>

            <a asp-action="Create" class="btn btn-primary btn-sm"> <i class="ti ti-download me-1"></i> Nuevo</a>
        </div>
    </div>

    @await Html.PartialAsync("_ListaPersonas", Model.Personas)
    @await Html.PartialAsync("_Paginacion", Model)

</div>
