@using System.Collections
@model IEnumerable<dynamic>

@{
    // Obtener el nombre de la acción actual (por ejemplo, "Boveda" o "Bloque")
    var actionName = ViewContext.RouteData.Values["action"].ToString();

    // Generar la URL para la acción "Create" correspondiente
    var createUrl = Url.Action("Create", "Cementerio", new { entityType = actionName });
}

<!-- Card -->
<div class="flex flex-col">
    <div class="-m-1.5 overflow-x-auto">
        <div class="p-1.5 inline-block min-w-full align-middle">
            <div class="bg-white border-gray-200 overflow-hidden rounded-xl border shadow-sm dark:bg-neutral-800 dark:border-neutral-700">
                <!-- Header -->
                <div class="px-6 py-4 gap-3 border-gray-200 grid border-b dark:border-neutral-700 md:flex md:justify-between md:items-center">
                    <div>
                        <h2 class="text-gray-800 text-xl font-semibold dark:text-neutral-200">
                            @ViewData["Title"]
                        </h2>
                        <p class="text-gray-600 text-sm dark:text-neutral-400">
                            Gestione los registros: puede listar, modificar, buscar y eliminar.
                        </p>
                    </div>

                    <div>
                        <div class="gap-x-2 inline-flex">
                            <div class="relative max-w-xs">
                                <label class="sr-only">Search</label>
                                <input type="text" name="hs-table-with-pagination-search" id="hs-table-with-pagination-search" class="py-2 px-3 ps-9 border-gray-200 block w-full rounded-lg text-sm shadow-sm focus:z-10 focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-900 dark:border-neutral-700 dark:text-neutral-400 dark:placeholder-neutral-500 dark:focus:ring-neutral-600" placeholder="Search for items">
                                <div class="inset-y-0 start-0 ps-3 pointer-events-none absolute flex items-center">
                                    <svg class="size-4 text-gray-400 dark:text-neutral-500" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <circle cx="11" cy="11" r="8"></circle>
                                        <path d="m21 21-4.3-4.3"></path>
                                    </svg>
                                </div>
                            </div>
                            <a class="py-2 px-3 gap-x-2 border-gray-200 bg-white text-gray-800 inline-flex items-center rounded-lg border text-sm font-medium shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800" asp-action="Index">
                                View all
                            </a>
                            <a class="py-2 px-3 gap-x-2 border-transparent bg-blue-600 text-white inline-flex items-center rounded-lg border text-sm font-medium hover:bg-blue-700 focus:outline-none focus:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none" asp-action="Create" asp-route-entityType="@ViewData["EntityType"]">
                                <svg class="size-4 shrink-0" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M5 12h14"></path>
                                    <path d="M12 5v14"></path>
                                </svg>
                                Crear Nuevo
                            </a>
                        </div>
                    </div>
                </div>
                <!-- End Header -->
                @if (Model != null && Model.Any())
                {
                    <table class="divide-gray-200 min-w-full divide-y dark:divide-neutral-700">
                        <thead class="bg-gray-50 dark:bg-neutral-800">
                            <tr>
                                <th scope="col" class="py-3 px-4 pe-0">
                                    <label for="hs-at-with-checkboxes-main" class="flex">
                                        <input type="checkbox" class="border-gray-300 text-blue-600 shrink-0 rounded focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none dark:bg-neutral-800 dark:border-neutral-600 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800" id="hs-at-with-checkboxes-main" wfd-id="id1">
                                        <span class="sr-only">Checkbox</span>
                                    </label>
                                </th>

                                @foreach (var property in Model.First().GetType().GetProperties())
                                {

                                    <th scope="col" class="px-6 py-3 text-gray-500 text-start text-xs font-medium uppercase dark:text-neutral-500">
                                        <div class="gap-x-2 flex items-center">
                                            <span class="text-gray-800 text-xs font-semibold uppercase tracking-wide dark:text-neutral-200">
                                                @property.Name
                                            </span>
                                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" aria-hidden="true" class="w-4 h-4">
                                                <path stroke-linecap="round" stroke-linejoin="round" d="M8.25 15L12 18.75 15.75 15m-7.5-6L12 5.25 15.75 9"></path>
                                            </svg>
                                        </div>

                                    </th>
                                }
                                <th scope="col" class="px-6 py-3 text-gray-500 text-end text-xs font-medium uppercase dark:text-neutral-500">
                                    <span class="text-gray-800 text-xs font-semibold uppercase tracking-wide dark:text-neutral-200">
                                        Acciones
                                    </span>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="divide-gray-200 divide-y dark:divide-neutral-700">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="py-3 ps-4">
                                        <div class="h-5 flex items-center">
                                            <input id="hs-table-pagination-checkbox-1" type="checkbox" class="border-gray-200 text-blue-600 rounded focus:ring-blue-500 dark:bg-neutral-800 dark:border-neutral-700 dark:checked:bg-blue-500 dark:checked:border-blue-500 dark:focus:ring-offset-gray-800">
                                            <label for="hs-table-pagination-checkbox-1" class="sr-only">Checkbox</label>
                                        </div>
                                    </td>
                                    @foreach (var property in item.GetType().GetProperties())
                                    {
                                        <td class="px-6 py-2 text-gray-800 whitespace-nowrap text-sm dark:text-neutral-200">
                                            <div class="ps-6 pe-6 py-3 lg:ps-3 xl:ps-0">
                                                <div class="gap-x-3 flex items-center">
                                                    <span class="text-gray-700"> @property.GetValue(item, null)</span>
                                                </div>
                                            </div>
                                        </td>
                                    }
                                    <td class="p-4 border-slate-200 border-b">
                                        <a class="gap-x-1 text-blue-600 inline-flex items-center text-sm font-medium decoration-2 hover:underline focus:outline-none focus:underline dark:text-blue-500" asp-action="Edit" asp-route-id="@item.Id">
                                            <svg class="text-blue-800 h-[25px] w-[25px] dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="m14.304 4.844 2.852 2.852M7 7H4a1 1 0 0 0-1 1v10a1 1 0 0 0 1 1h11a1 1 0 0 0 1-1v-4.5m2.409-9.91a2.017 2.017 0 0 1 0 2.853l-6.844 6.844L8 14l.713-3.565 6.844-6.844a2.015 2.015 0 0 1 2.852 0Z" />
                                            </svg>

                                        </a>
                                        <button type="button" class="gap-x-1 text-red-600 delete-button inline-flex items-center text-sm font-medium decoration-2 hover:underline focus:outline-none focus:underline dark:text-blue-500" aria-haspopup="dialog" aria-expanded="false" aria-controls="hs-vertically-centered-modal" data-hs-overlay="#hs-vertically-centered-modal" data-id="@item.Id">
                                            <svg class="text-red-800 h-[25px] w-[25px] dark:text-white" aria-hidden="true" xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="none" viewBox="0 0 24 24">
                                                <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M5 7h14m-9 3v8m4-8v8M10 3h4a1 1 0 0 1 1 1v3H9V4a1 1 0 0 1 1-1ZM6 7h12v13a1 1 0 0 1-1 1H7a1 1 0 0 1-1-1V7Z" />
                                            </svg>

                                        </button>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <div class="px-6 py-4">
                        <p class="text-gray-600 text-sm dark:text-neutral-400">No hay registros disponibles.</p>
                    </div>
                }
                <!-- End Table -->
                <!-- Footer -->
                <div class="px-6 py-4 gap-3 border-gray-200 grid border-t dark:border-neutral-700 md:flex md:justify-between md:items-center">
                    <div>
                        <p class="text-gray-600 text-sm dark:text-neutral-400">
                            <span class="text-slate-500 block text-sm">Page 1 of 10</span>
                            <span class="text-gray-800 font-semibold dark:text-neutral-200">12</span> results
                        </p>
                    </div>

                    <div>
                        <div class="gap-x-2 inline-flex">
                            <button type="button" class="py-1.5 px-2 gap-x-2 border-gray-200 bg-white text-gray-800 inline-flex items-center rounded-lg border text-sm font-medium shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800">
                                <svg class="size-4 shrink-0" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="m15 18-6-6 6-6"></path>
                                </svg>
                                Prev
                            </button>

                            <button type="button" class="py-1.5 px-2 gap-x-2 border-gray-200 bg-white text-gray-800 inline-flex items-center rounded-lg border text-sm font-medium shadow-sm hover:bg-gray-50 focus:outline-none focus:bg-gray-50 disabled:opacity-50 disabled:pointer-events-none dark:bg-transparent dark:border-neutral-700 dark:text-neutral-300 dark:hover:bg-neutral-800 dark:focus:bg-neutral-800">
                                Next
                                <svg class="size-4 shrink-0" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="m9 18 6-6-6-6"></path>
                                </svg>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@await Html.PartialAsync("_ConfirmDelete")