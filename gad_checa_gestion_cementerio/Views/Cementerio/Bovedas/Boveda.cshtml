@model gad_checa_gestion_cementerio.Models.BovedaModel

<div class="container-fluid mt-4">
    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Edit" method="post" id="bovedaForm">
                <input type="hidden" asp-for="Id" />

                <div class="mb-3">
                    <label asp-for="NumeroSecuecial" class="form-label">Número Secuencial</label>
                    <input asp-for="NumeroSecuecial" class="form-control" />
                    <span asp-validation-for="NumeroSecuecial" class="text-danger"></span>
                </div>

                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="PropietarioId" class="form-label">Propietario</label>
                        <select asp-for="PropietarioId" id="propietario-select" name="PropietarioId"
                            class="form-control select2">
                            <option value="">Seleccione un propietario</option>
                            @foreach (var p in ViewBag.Propietarios as List<SelectListItem>)
                            {
                                <option value="@p.Value">@p.Text</option>
                            }
                        </select>

                        <div class="mt-2">
                            <small class="form-text text-muted">
                                ¿No encuentras al propietario?
                                <button type="button" class="btn btn-sm btn-outline-primary"
                                    onclick="abrirModalCrearPropietario()">Crear Persona</button>
                            </small>
                        </div>
                    </div>
                </div>

                <div class="mt-4">
                    <button type="submit" class="btn btn-success">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Modal para crear nueva persona -->
<div class="modal fade" id="modalNuevoPropietario" tabindex="-1" aria-labelledby="modalPropietarioLabel"
    aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Crear nuevo Propietario</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="modalPropietarioContent">
                <!-- Aquí se carga el formulario de persona -->
            </div>
        </div>
    </div>
</div>

@section Scripts {

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <link href="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/css/select2.min.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/select2@4.1.0-rc.0/dist/js/select2.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#propietario-select').select2({
                placeholder: 'Seleccione o busque un propietario',
                allowClear: true,
                width: '100%',
                minimumResultsForSearch: 0, // 👈 Esto activa el buscador SIEMPRE
                language: {
                    noResults: function () {
                        return `
                                                <div style='padding:5px'>
                                                    <span>No encontrado</span><br/>
                                                    <button type="button" onclick="abrirModalCrearPropietario()" class="btn btn-sm btn-primary mt-2">Crear nuevo</button>
                                                </div>
                                            `;
                    }
                },
                escapeMarkup: function (markup) {
                    return markup;
                }
            });
        });

        function abrirModalCrearPropietario() {
            $('#modalNuevoPropietario').modal('show');

            // Cargar el formulario
            $('#modalPropietarioContent').load('/Propietario/CrearDesdeModal', function () {
                // Configurar el submit del formulario
                $('#formCrearPropietario').submit(function (e) {
                    e.preventDefault();

                    $.ajax({
                        url: $(this).attr('action'),
                        type: 'POST',
                        data: $(this).serialize(),
                        success: function (response) {
                            if (response.success) {
                                personaCreada(response.id, response.nombreCompleto);
                                $('#modalNuevoPropietario').modal('hide');
                            } else {
                                $('#modalPropietarioContent').html(response);
                            }
                        },
                        error: function (xhr) {
                            $('#modalPropietarioContent').html(xhr.responseText);
                        }
                    });
                });
            });
        }


        function personaCreada(id, nombreCompleto) {
            const select = $('#propietario-select');
            select.find('option').each(function () {
                if ($(this).val() === id.toString() || $(this).text().trim() === nombreCompleto.trim()) {
                    $(this).remove();
                }
            });

            const nuevaOpcion = new Option(nombreCompleto, id, true, true);
            select.append(nuevaOpcion).val(id).trigger('change');
            $('#modalNuevoPropietario').modal('hide');
        }

    </script>
}
