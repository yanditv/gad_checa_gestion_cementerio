@model gad_checa_gestion_cementerio.Models.Views.BovedaViewModel

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Numero" class="control-label"></label>
        <input asp-for="Numero" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PisoId" class="control-label"></label>
        <select asp-for="PisoId" class="form-control" asp-items="ViewBag.Bloques"></select>
    </div>

    <div class="form-group">
        <label asp-for="Estado" class="control-label"></label>
        <input asp-for="Estado" type="checkbox" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar</button>
</form>


