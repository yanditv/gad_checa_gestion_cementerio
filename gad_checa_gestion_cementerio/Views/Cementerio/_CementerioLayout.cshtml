            new { Id = "tabs-with-icons-2", Name = "Bloques", Action = "Bloques", Icon = "M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z M9 22V12h6v10" },
            new { Id = "tabs-with-icons-3", Name = "Bovedas", Action = "Bovedas", Icon = "M12 2a10 10 0 1 0 0 20 10 10 0 1 0 0-20z M12 10a3 3 0 1 1 0 6 3 3 0 1 1 0-6z M7 20.662V19a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v1.662" },
