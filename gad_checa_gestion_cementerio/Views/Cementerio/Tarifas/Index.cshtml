@model gad_checa_gestion_cementerio.Models.CementerioModel
@{
    ViewData["Title"] = "Configuración de Tarifas";
    Layout = "~/Views/Cementerio/_CementerioLayout.cshtml";
    ViewData["EntityType"] = "tarifas";
}

<div>
    <h1>Configuración de Tarifas</h1>
    <p>En esta sección puedes gestionar las tarifas del cementerio.</p>

    <form asp-action="Tarifas" method="post">
        <div asp-validation-summary="ModelOnly" class="text-red"></div>

        <div class="flex flex-col">
            <label asp-for="tarifa_arriendo" class="text-gray-700"></label>
            <input asp-for="tarifa_arriendo"
                class="px-4 py-2 border-gray-300 text-gray-600 w-full rounded-md border focus:ring-gray-500 focus:border-gray-900 focus:outline-none sm:text-sm" />
            <span asp-validation-for="tarifa_arriendo" class="text-red"></span>
        </div>
        <div class="pt-6 space-x-4 flex items-center">
            <a asp-action="Index"
                class="text-white bg-gray-900 px-4 py-3 flex items-center justify-center rounded-md focus:outline-none">Cancelar</a>
            <input type="submit" value="Guardar"
                class="bg-blue-700 text-white px-4 py-3 flex items-center justify-center rounded-md focus:outline-none" />
        </div>
    </form>

</div>