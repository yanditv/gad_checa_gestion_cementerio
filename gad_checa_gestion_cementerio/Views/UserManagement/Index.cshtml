@model List<gad_checa_gestion_cementerio.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="container mx-auto px-4 py-8">
    <div class="flex justify-between items-center mb-6">
        <h1 class="text-2xl font-bold text-gray-900">@ViewData["Title"]</h1>
        <a asp-action="Create" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded">
            Crear Nuevo Usuario
        </a>
    </div>

    <div class="bg-white shadow-md rounded-lg overflow-hidden">
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-gray-50">
                <tr>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Correo Electrónico
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Roles
                    </th>
                    <th class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                        Acciones
                    </th>
                </tr>
            </thead>
            <tbody class="bg-white divide-y divide-gray-200">
                @foreach (var userRole in Model)
                {
                            <tr>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">@userRole.User.Email</div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap">
                                    <div class="text-sm text-gray-900">
                                        @string.Join(", ", userRole.Roles)
                                    </div>
                                </td>
                                <td class="px-6 py-4 whitespace-nowrap text-sm font-medium">
                                    <div class="flex space-x-2">
                                        <a asp-action="Edit" asp-route-id="@userRole.User.Id" 
                                           class="text-indigo-600 hover:text-indigo-900">
                                            Editar
                                        </a>
                                        <form asp-action="ResetPassword" asp-route-id="@userRole.User.Id" method="post" class="inline">
                                            <button type="submit" class="text-yellow-600 hover:text-yellow-900">
                                                Resetear Contraseña
                                            </button>
                                        </form>
                                        <form asp-action="Delete" asp-route-id="@userRole.User.Id" method="post" class="inline"
                                              onsubmit="return confirm('¿Está seguro de que desea eliminar este usuario?');">
                                            <button type="submit" class="text-red-600 hover:text-red-900">
                                                Eliminar
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                }
            </tbody>
        </table>
    </div>
</div> 