@model List<gad_checa_gestion_cementerio.Data.Pago>

@{
    ViewData["Title"] = "Facturas";
    var contratoId = ViewData["ContratoId"];
    var contratoSerie = ViewData["ContratoSerie"];
    var cuotasPagadas = Model.SelectMany(p => p.Cuotas)
    .Where(c => c.Pagada && c.ContratoId == (int)contratoId)
    .Select(c => new
    {
        Cuota = c,
        Pago = Model.FirstOrDefault(p => p.Cuotas.Any(q => q.Id == c.Id))
    }).ToList();
}

<div class="card border-0 shadow-sm">
    <div class="card-header bg-light border-0 py-3">
        <div class="d-flex justify-content-between align-items-center">
            <div class="d-flex align-items-center">
                <span class="me-3"><i class="ti ti-file-invoice text-primary fs-3"></i></span>
                <div>
                    <h4 class="mb-1 text-dark">Facturas del Contrato</h4>
                    <p class="mb-0 text-muted small">Contrato #@contratoSerie</p>
                </div>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-outline-secondary btn-sm">
                    <i class="ti ti-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th class="border-0"><i class="ti ti-hash me-1 text-primary"></i># Pago</th>
                        <th class="border-0"><i class="ti ti-list-check me-1 text-primary"></i>Cuotas Incluidas</th>
                        <th class="border-0"><i class="ti ti-currency-dollar me-1 text-primary"></i>Total Pagado</th>
                        <th class="border-0"><i class="ti ti-user me-1 text-primary"></i>Difunto</th>
                        <th class="border-0"><i class="ti ti-user-star me-1 text-primary"></i>Responsable</th>
                        <th class="border-0"><i class="ti ti-calendar-check me-1 text-primary"></i>Fecha de Pago</th>
                        <th class="border-0"><i class="ti ti-credit-card me-1 text-primary"></i>Tipo de Pago</th>
                        <th class="border-0"><i class="ti ti-receipt me-1 text-primary"></i>Comprobante</th>
                        <th class="border-0 text-end"><i class="ti ti-file-text me-1 text-primary"></i>Factura</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pago in Model)
                    {
                        var contrato = pago.Cuotas.FirstOrDefault()?.Contrato;
                        var responsable = contrato?.Responsables?.FirstOrDefault();
                        var difunto = contrato?.Difunto;
                        <tr>
                            <td><span class="badge bg-primary-subtle text-primary">@pago.Id</span></td>
                            <td>
                                @foreach (var cuota in pago.Cuotas)
                                {
                                    <span class="badge bg-light text-dark me-1">#@cuota.Id -
                                        @cuota.FechaVencimiento.ToString("dd/MM/yyyy")</span>
                                }
                            </td>
                            <td class="fw-bold"><span class="badge bg-light text-dark">@pago.Monto.ToString("C")</span></td>
                            <td>
                                <span class="badge bg-light text-dark">
                                    <i class="ti ti-user me-1"></i>@difunto?.Nombres @difunto?.Apellidos
                                </span>
                            </td>
                            <td>
                                <span class="badge bg-info-subtle text-info">
                                    <i class="ti ti-user-star me-1"></i>@(responsable?.Nombres) @(responsable?.Apellidos)
                                </span>
                            </td>
                            <td>@pago.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td><span class="badge bg-info-subtle text-info">@pago.TipoPago</span></td>
                            <td>@pago.NumeroComprobante</td>
                            <td class="text-end">
                                <a class="btn btn-outline-primary btn-sm" target="_blank" asp-action="FacturaPdf"
                                    asp-route-id="@pago.Id">
                                    <i class="ti ti-file-text me-1"></i>Ver PDF
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table> :not(caption)>*>* {
            padding: 1rem;
        }

        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 500;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, .02);
        }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }
    </style>
}
