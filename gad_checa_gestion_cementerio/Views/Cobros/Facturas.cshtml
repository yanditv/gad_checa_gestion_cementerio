@model List<gad_checa_gestion_cementerio.Data.Pago>

@{
    ViewData["Title"] = "Facturas";
    var contratoId = ViewData["ContratoId"];
    var contratoSerie = ViewData["ContratoSerie"];
    var cuotasPagadas = Model.SelectMany(p => p.Cuotas)
    .Where(c => c.Pagada && c.ContratoId == (int)contratoId)
    .Select(c => new
    {
        Cuota = c,
        Pago = Model.FirstOrDefault(p => p.Cuotas.Any(q => q.Id == c.Id))
    }).ToList();
}

<div class="card shadow-sm">
    <div class="card-header bg-light">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h4 class="card-title mb-0">
                    <i class="fas fa-file-invoice-dollar me-2"></i>Facturas del Contrato
                </h4>
                <p class="text-muted mb-0 mt-1">Contrato #@contratoSerie</p>
            </div>
            <div>
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Volver
                </a>
            </div>
        </div>
    </div>

    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="bg-light">
                    <tr>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-hashtag me-2 text-primary"></i>
                                <span># Cuota</span>
                            </div>
                        </th>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-alt me-2 text-primary"></i>
                                <span>Fecha Vencimiento</span>
                            </div>
                        </th>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-dollar-sign me-2 text-primary"></i>
                                <span>Monto</span>
                            </div>
                        </th>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-calendar-check me-2 text-primary"></i>
                                <span>Fecha de Pago</span>
                            </div>
                        </th>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-credit-card me-2 text-primary"></i>
                                <span>Tipo de Pago</span>
                            </div>
                        </th>
                        <th class="border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-receipt me-2 text-primary"></i>
                                <span>Comprobante</span>
                            </div>
                        </th>
                        <th class="border-0 text-end">
                            <div class="d-flex align-items-center justify-content-end">
                                <i class="fas fa-file-pdf me-2 text-primary"></i>
                                <span>Factura</span>
                            </div>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in cuotasPagadas)
                    {
                        <tr>
                            <td>
                                <span class="badge bg-primary">@item.Cuota.Id</span>
                            </td>
                            <td>@item.Cuota.FechaVencimiento.ToString("dd/MM/yyyy")</td>
                            <td class="fw-bold">@item.Cuota.Monto.ToString("C")</td>
                            <td>@item.Pago?.FechaPago.ToString("dd/MM/yyyy")</td>
                            <td>
                                <span class="badge bg-info">@item.Pago?.TipoPago</span>
                            </td>
                            <td>@item.Pago?.NumeroComprobante</td>
                            <td class="text-end">
                                @if (item.Pago != null)
                                {
                                    <a class="btn btn-sm btn-outline-primary" target="_blank" asp-action="FacturaPdf"
                                        asp-route-id="@item.Pago.Id">
                                        <i class="fas fa-file-pdf me-2"></i>Ver PDF
                                    </a>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .table> :not(caption)>*>* {
            padding: 1rem;
        }

        .badge {
            padding: 0.5rem 0.75rem;
            font-weight: 500;
        }

        .table-hover tbody tr:hover {
            background-color: rgba(0, 0, 0, .02);
        }

        .btn-outline-primary:hover {
            background-color: #0d6efd;
            color: white;
        }
    </style>
}
