@model gad_checa_gestion_cementerio.Areas.Identity.Data.ApplicationUser

@{
    ViewData["Title"] = "Eliminar Usuario";
}

<div class="my-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h4 class="card-title mb-2">@ViewData["Title"]</h4>
                <p class="mb-0">
                    ¿Está seguro que desea eliminar este usuario?
                </p>
            </div>
            <div class="d-flex gap-2 align-items-center mt-3 mt-md-0">
                <a asp-action="Index" class="btn btn-light">
                    <i class="ti ti-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
        <div class="card-body">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

            <div class="alert alert-warning">
                <i class="ti ti-alert-triangle me-2"></i>
                Esta acción no se puede deshacer.
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Email</label>
                        <div class="form-control-plaintext">@Model.Email</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Cédula</label>
                        <div class="form-control-plaintext">@Model.Cedula</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Nombre</label>
                        <div class="form-control-plaintext">@Model.Nombres</div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="form-group">
                        <label class="form-label">Apellido</label>
                        <div class="form-control-plaintext">@Model.Apellidos</div>
                    </div>
                </div>
            </div>

            <form asp-action="Delete" method="post" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">
                        <i class="ti ti-trash me-1"></i>Eliminar
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>