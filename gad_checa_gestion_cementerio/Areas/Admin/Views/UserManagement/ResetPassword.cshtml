@model gad_checa_gestion_cementerio.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Resetear Contraseña";
}

<div class="my-4">
    <div class="card">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h4 class="card-title mb-2">@ViewData["Title"]</h4>
                <p class="text-muted">
                    Establezca una nueva contraseña para el usuario.
                </p>
            </div>
            <div class="d-flex gap-2 align-items-center mt-3 mt-md-0">
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="ti ti-arrow-left me-1"></i>Volver
                </a>
            </div>
        </div>
        <div class="card-body">
            <div class="alert alert-info">
                <div class="d-flex align-items-center">
                    <i class="ti ti-info-circle me-2 fs-4"></i>
                    <div>
                        <h5 class="mb-1">Resetear Contraseña</h5>
                        <p class="mb-0">Ingrese una nueva contraseña para el usuario <strong>@Model.Email</strong></p>
                    </div>
                </div>
            </div>

            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                <input type="hidden" asp-for="Id" />
                <input type="hidden" asp-for="Email" />

                <div class="row g-3">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="NewPassword" class="form-label">Nueva Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="ti ti-lock"></i>
                                </span>
                                <input asp-for="NewPassword" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="ConfirmPassword" class="form-label">Confirmar Contraseña</label>
                            <div class="input-group">
                                <span class="input-group-text">
                                    <i class="ti ti-lock-check"></i>
                                </span>
                                <input asp-for="ConfirmPassword" class="form-control" type="password" />
                            </div>
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-4">
                    <button type="submit" class="btn btn-warning">
                        <i class="ti ti-key me-1"></i>Resetear Contraseña
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="ti ti-arrow-left me-1"></i>Cancelar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}