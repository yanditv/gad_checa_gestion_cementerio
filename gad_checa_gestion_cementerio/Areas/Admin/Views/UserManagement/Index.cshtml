@model List<gad_checa_gestion_cementerio.Models.UserRoleViewModel>

@{
    ViewData["Title"] = "Gestión de Usuarios";
}

<div class="my-4">
    <div class="card">
        <div class="card-header d-flex flex-wrap justify-content-between align-items-center">
            <div>
                <h4 class="card-title mb-2">Lista de Usuarios</h4>
                <p class="text-muted">
                    Gestione los registros: puede listar, modificar, buscar y eliminar.
                </p>
            </div>
            <div class="d-flex gap-2 align-items-center mt-3 mt-md-0 flex-wrap-nowrap">
                <div>
                    <div class="input-group">
                        <input type="text" id="hs-table-with-pagination-search" class="form-control form-control-sm"
                            placeholder="Buscar..." aria-label="Search" />
                        <span class="input-group-text">
                            <i class="ti ti-search"></i>
                        </span>
                    </div>
                </div>
                <a class="btn btn-outline-secondary btn-md" asp-action="Index">
                    Ver todos
                </a>
                <a class="btn btn-primary btn-md" asp-action="Create">
                    <i class="ti ti-plus"></i> <span class="no-wrap">Crear</span><span class="no-wrap"> Nuevo</span>
                </a>
            </div>
        </div>
        @if (Model != null && Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover mb-0">
                    <thead class="table-secondary">
                        <tr>
                            <th scope="col">
                                <input type="checkbox" class="form-check-input" id="hs-at-with-checkboxes-main" />
                            </th>
                            <th scope="col" class="text-uppercase small fw-bold">Nombre Completo</th>
                            <th scope="col" class="text-uppercase small fw-bold">Email</th>
                            <th scope="col" class="text-uppercase small fw-bold">Teléfono</th>
                            <th scope="col" class="text-uppercase small fw-bold">Cedula</th>
                            <th scope="col" class="text-uppercase small fw-bold">Roles</th>
                            <th scope="col" class="text-uppercase small fw-bold">Estado</th>
                            <th scope="col" class="text-end text-uppercase small fw-bold">Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var userRole in Model)
                        {
                            <tr>
                                <td>
                                    <input type="checkbox" class="form-check-input" />
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="avatar avatar-sm me-2">
                                            <span class="avatar-initial rounded-circle bg-primary">
                                                @{
                                                    var userInicial1 = !string.IsNullOrEmpty(userRole.User.Nombres) ? userRole.User.Nombres[0].ToString().ToUpper() : "?";
                                                    var userInicial2 = !string.IsNullOrEmpty(userRole.User.Apellidos) ? userRole.User.Apellidos[0].ToString().ToUpper() : "?";
                                                }
                                                @userInicial1@userInicial2
                                            </span>
                                        </div>
                                        <div>
                                            <h6 class="mb-0">@userRole.User.Nombres @userRole.User.Apellidos</h6>
                                        </div>
                                    </div>
                                </td>
                                <td>@userRole.User.Email</td>
                                <td>@(string.IsNullOrEmpty(userRole.User.PhoneNumber) ? "-" : userRole.User.PhoneNumber)</td>
                                <td>@userRole.User.Cedula</td>
                                <td>
                                    @foreach (var role in userRole.Roles)
                                    {
                                        <span class="badge bg-info me-1">@role</span>
                                    }
                                </td>
                                <td>
                                    @if (userRole.User.EmailConfirmed)
                                    {
                                        <span class="badge bg-success">Activo</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-warning">Pendiente</span>
                                    }
                                </td>
                                <td class="text-end">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@userRole.User.Id"
                                            class="btn btn-sm btn-outline-primary" data-bs-toggle="tooltip"
                                            title="Editar Usuario">
                                            <i class="ti ti-edit"></i>
                                        </a>
                                        <a asp-action="ResetPassword" asp-route-id="@userRole.User.Id"
                                            class="btn btn-sm btn-outline-warning" data-bs-toggle="tooltip"
                                            title="Resetear Contraseña">
                                            <i class="ti ti-key"></i>
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@userRole.User.Id"
                                            class="btn btn-sm btn-outline-danger" data-bs-toggle="tooltip"
                                            title="Eliminar Usuario">
                                            <i class="ti ti-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="p-3">
                <p class="text-muted mb-0">No hay registros disponibles.</p>
            </div>
        }

        <div class="card-footer d-flex justify-content-between">
            <p class="mb-0">
                <small>Página 1 de 1 • Total @Model.Count resultados</small>
            </p>
            <div>
                <button class="btn btn-sm btn-light me-2" type="button" disabled>
                    <i class="ti ti-arrow-left"></i> Prev
                </button>
                <button class="btn btn-sm btn-light" type="button" disabled>
                    Next <i class="ti ti-arrow-right"></i>
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Inicializar tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })

        // Funcionalidad de búsqueda
        document.getElementById('hs-table-with-pagination-search').addEventListener('keyup', function () {
            var searchText = this.value.toLowerCase();
            var table = document.querySelector('table');
            var rows = table.getElementsByTagName('tr');

            for (var i = 1; i < rows.length; i++) {
                var row = rows[i];
                var cells = row.getElementsByTagName('td');
                var found = false;

                for (var j = 1; j < cells.length - 1; j++) {
                    var cell = cells[j];
                    if (cell.textContent.toLowerCase().indexOf(searchText) > -1) {
                        found = true;
                        break;
                    }
                }

                row.style.display = found ? '' : 'none';
            }
        });
    </script>
}