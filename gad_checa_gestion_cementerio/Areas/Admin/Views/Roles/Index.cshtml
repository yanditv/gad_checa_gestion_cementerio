@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

@{
    ViewData["Title"] = "Gestión de Roles";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header">
                <h5>Roles del Sistema</h5>
                <div class="card-header-right">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="ti ti-plus"></i> Nuevo Rol
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["SuccessMessage"] != null)
                {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                }
                @if (TempData["ErrorMessage"] != null)
                {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                }
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>Nombre del Rol</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var role in Model)
                            {
                                    <tr>
                                        <td>@role.Name</td>
                                        <td>
                                            <div class="btn-group" role="group">
                                                <a asp-action="UsersInRole" asp-route-id="@role.Id" class="btn btn-info btn-sm">
                                                    <i class="ti ti-users"></i> Usuarios
                                                </a>
                                                <form asp-action="Delete" asp-route-id="@role.Id" method="post" style="display: inline;">
                                                    @Html.AntiForgeryToken()
                                                    <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('¿Está seguro de eliminar este rol?');">
                                                        <i class="ti ti-trash"></i> Eliminar
                                                    </button>
                                                </form>
                                            </div>
                                        </td>
                                    </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div> 