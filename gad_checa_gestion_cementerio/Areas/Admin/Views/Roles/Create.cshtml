@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const roleNameInput = document.getElementById('roleName');
            const rolePreview = document.getElementById('role-preview');
            const previewRoleName = document.getElementById('preview-role-name');
            const form = document.getElementById('create-role-form');
            const submitBtn = document.getElementById('submit-btn');
            const errorContainer = document.getElementById('validation-errors');

            // Manejar sugerencias de roles
            const roleSuggestions = document.querySelectorAll('.role-suggestion');
            roleSuggestions.forEach(function (btn) {
                btn.addEventListener('click', function () {
                    const roleName = this.getAttribute('data-role');
                    roleNameInput.value = roleName;
                    roleNameInput.focus();
                    updatePreview();

                    // Animación visual
                    this.style.transform = 'scale(0.95)';
                    setTimeout(() => {
                        this.style.transform = '';
                    }, 150);
                });
            });

            // Actualizar vista previa en tiempo real
            roleNameInput.addEventListener('input', updatePreview);

            function updatePreview() {
                const value = roleNameInput.value.trim();
                if (value.length >= 2) {
                    previewRoleName.textContent = value;
                    rolePreview.style.display = 'block';
                } else {
                    rolePreview.style.display = 'none';
                }

                // Limpiar errores previos
                clearErrors();
            }

            // Validación del formulario
            form.addEventListener('submit', function (e) {
                const roleName = roleNameInput.value.trim();
                const errors = [];

                // Validaciones
                if (!roleName) {
                    errors.push('El nombre del rol es obligatorio');
                } else if (roleName.length < 3) {
                    errors.push('El nombre del rol debe tener al menos 3 caracteres');
                } else if (roleName.length > 50) {
                    errors.push('El nombre del rol no puede exceder 50 caracteres');
                } else if (!/^[a-zA-ZáéíóúÁÉÍÓÚñÑ\s]+$/.test(roleName)) {
                    errors.push('El nombre del rol solo puede contener letras y espacios');
                }

                if (errors.length > 0) {
                    e.preventDefault();
                    showErrors(errors);
                    return false;
                } else {
                    // Mostrar loading
                    submitBtn.innerHTML = '<i class="ti ti-loader-2 me-1 spin"></i>Creando...';
                    submitBtn.disabled = true;
                }
            });

            function showErrors(errors) {
                const errorDiv = errorContainer.querySelector('div');
                let errorHtml = '<ul class="mb-0">';
                errors.forEach(function (error) {
                    errorHtml += '<li>' + error + '</li>';
                });
                errorHtml += '</ul>';

                errorDiv.innerHTML = errorHtml;
                errorContainer.style.display = 'block';

                // Scroll hacia el error
                errorContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });

                // Focus en el campo con error
                roleNameInput.focus();
                roleNameInput.classList.add('is-invalid');
            }

            function clearErrors() {
                errorContainer.style.display = 'none';
                roleNameInput.classList.remove('is-invalid');
            }

            // Ocultar errores cuando se interactúe con el campo
            roleNameInput.addEventListener('focus', clearErrors);

            // Animación CSS para el spinner
            const style = document.createElement('style');
            style.textContent = `
                        .spin {
                            animation: spin 1s linear infinite;
                        }
                        @@keyframes spin {
                            from { transform: rotate(0deg); }
                            to { transform: rotate(360deg); }
                        }
                    `;
            document.head.appendChild(style);
        });
    </script>
}