@{
    ViewData["Title"] = "Crear Rol";
}

<!-- Contenido Principal -->
<div class="row justify-content-center">
    <div class="col-xxl-8 col-lg-10">
        <div class="card overflow-hidden">
            <!-- Header de la Card -->
            <div class="card-header bg-primary-gradient text-white">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-lg bg-white bg-opacity-20 rounded">
                            <span class="avatar-title">
                                <i class="ti ti-shield-plus fs-24"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="mb-1 text-white">Crear Nuevo Rol</h5>
                        <p class="mb-0 text-white-50">Define un nuevo rol y sus permisos en el sistema</p>
                    </div>
                </div>
            </div>

            <div class="card-body p-4">
                <!-- Información de ayuda -->
                <div class="alert alert-info alert-border-left mb-4" role="alert">
                    <i class="ri-information-line me-3 align-middle fs-16"></i>
                    <div>
                        <strong>Información:</strong> Los roles determinan qué acciones pueden realizar los usuarios en
                        el sistema.
                        Elige un nombre descriptivo y único para el nuevo rol.
                    </div>
                </div>

                <form asp-action="Create" method="post" id="create-role-form">
                    @Html.AntiForgeryToken()

                    <!-- Contenedor de errores dinámico -->
                    <div id="validation-errors" style="display: none;"
                        class="alert alert-danger alert-border-left alert-dismissible fade show mb-4" role="alert">
                        <i class="ri-error-warning-line me-3 align-middle fs-16"></i>
                        <div></div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <!-- Campo del nombre del rol -->
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="mb-4">
                                <label for="roleName" class="form-label fs-14 fw-medium">
                                    <i class="ti ti-shield-check me-2 text-primary"></i>Nombre del Rol
                                    <span class="text-danger">*</span>
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text bg-light border-end-0">
                                        <i class="ti ti-shield text-muted"></i>
                                    </span>
                                    <input type="text" class="form-control border-start-0 ps-0" id="roleName"
                                        name="roleName" placeholder="Ej: Editor, Moderador, Supervisor..." required
                                        autocomplete="off">
                                </div>
                                <div class="form-text">
                                    <i class="ti ti-info-circle me-1"></i>
                                    El nombre debe ser único y descriptivo (3-50 caracteres)
                                </div>
                                <div class="invalid-feedback" id="roleName-error"></div>
                            </div>

                            <!-- Sugerencias de roles -->
                            <div class="mb-4">
                                <label class="form-label fs-14 fw-medium mb-2">
                                    <i class="ti ti-bulb me-2 text-warning"></i>Sugerencias de Roles Comunes
                                </label>
                                <div class="d-flex flex-wrap gap-2">
                                    <button type="button" class="btn btn-outline-primary btn-sm role-suggestion"
                                        data-role="Editor">
                                        <i class="ti ti-edit me-1"></i>Editor
                                    </button>
                                    <button type="button" class="btn btn-outline-success btn-sm role-suggestion"
                                        data-role="Moderador">
                                        <i class="ti ti-shield-check me-1"></i>Moderador
                                    </button>
                                    <button type="button" class="btn btn-outline-info btn-sm role-suggestion"
                                        data-role="Supervisor">
                                        <i class="ti ti-eye me-1"></i>Supervisor
                                    </button>
                                    <button type="button" class="btn btn-outline-warning btn-sm role-suggestion"
                                        data-role="Operador">
                                        <i class="ti ti-settings me-1"></i>Operador
                                    </button>
                                    <button type="button" class="btn btn-outline-secondary btn-sm role-suggestion"
                                        data-role="Invitado">
                                        <i class="ti ti-user me-1"></i>Invitado
                                    </button>
                                </div>
                                <div class="form-text">
                                    <i class="ti ti-click me-1"></i>
                                    Haz clic en cualquier sugerencia para usarla
                                </div>
                            </div>

                            <!-- Vista previa del rol -->
                            <div class="mb-4" id="role-preview" style="display: none;">
                                <label class="form-label fs-14 fw-medium mb-2">
                                    <i class="ti ti-eye me-2 text-info"></i>Vista Previa del Rol
                                </label>
                                <div class="border rounded p-3 bg-light">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            <div class="avatar-sm bg-primary-subtle rounded">
                                                <span class="avatar-title">
                                                    <i class="ti ti-shield text-primary"></i>
                                                </span>
                                            </div>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1 fw-semibold" id="preview-role-name">Nombre del Rol</h6>
                                            <p class="text-muted mb-0 fs-13">Rol personalizado del sistema</p>
                                        </div>
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-success-subtle text-success fs-12">
                                                <i class="ti ti-circle-filled fs-10 me-1"></i>Nuevo
                                            </span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Botones de acción -->
                    <div class="row">
                        <div class="col-lg-8 mx-auto">
                            <div class="text-end pt-3 border-top">
                                <a asp-action="Index" class="btn btn-soft-secondary me-2">
                                    <i class="ti ti-arrow-left me-1"></i>Cancelar
                                </a>
                                <button type="submit" class="btn btn-primary" id="submit-btn">
                                    <i class="ti ti-device-floppy me-1"></i>Crear Rol
                                </button>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

