@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "¿Olvidó su contraseña?";
}

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-blue-100 to-blue-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-sm space-y-8 bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <div>
            <div class="flex justify-center">
                <img class="h-32 w-auto transform transition-transform duration-300 hover:scale-105" src="~/images/logo.jpeg" alt="Logo GAD Checa" />
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                @ViewData["Title"]
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Ingrese su correo electrónico y le enviaremos un enlace para restablecer su contraseña
            </p>
        </div>
        <form method="post" class="mt-8 space-y-6">
            <div asp-validation-summary="ModelOnly" class="text-red-500 text-sm bg-red-50 p-4 rounded-lg border border-red-100" role="alert"></div>
            <div class="space-y-5">
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Correo electrónico</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none" style="padding-left: 10px;">
                            <i class="ti ti-mail text-gray-400 text-lg"></i>
                        </div>
                        <input asp-for="Input.Email" class="py-3 px-4 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none" placeholder="ejemplo@teobu.com" style="padding-left: 30px; padding-right: 10px;" />
                        <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
            </div>

            <div class="flex flex-col space-y-4">
                <button type="submit" class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                    <i class="ti ti-mail-send text-lg"></i>
                    Enviar enlace de recuperación
                </button>
                <a asp-page="./Login" class="text-center text-sm text-gray-600 hover:text-blue-600 transition-colors duration-200">
                    <i class="ti ti-arrow-left mr-1"></i>
                    Volver al inicio de sesión
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}