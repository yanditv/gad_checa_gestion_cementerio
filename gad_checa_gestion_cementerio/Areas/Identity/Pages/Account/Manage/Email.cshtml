@page
@model gad_checa_gestion_cementerio.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Correo Electrónico";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="row">
    <div class="col-xxl-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-xxl-9">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-success-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-mail text-success"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1">@ViewData["Title"]</h5>
                        <p class="text-muted mb-0">Gestiona tu dirección de correo electrónico</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <partial name="_StatusMessage" model="Model.StatusMessage" />

                <form id="email-form" method="post">
                    <!-- Email actual -->
                    <div class="mb-4">
                        <label asp-for="Email" class="form-label">
                            <i class="ti ti-mail me-1"></i>Correo Electrónico Actual
                        </label>
                        @if (Model.IsEmailConfirmed)
                        {
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" disabled />
                                <span class="input-group-text bg-success text-white border-success">
                                    <i class="ti ti-circle-check me-1"></i>
                                    Verificado
                                </span>
                            </div>
                            <div class="form-text text-success">
                                <i class="ti ti-check me-1"></i>
                                Tu dirección de correo electrónico está verificada
                            </div>
                        }
                        else
                        {
                            <div class="input-group">
                                <input asp-for="Email" class="form-control" disabled />
                                <span class="input-group-text bg-warning text-dark border-warning">
                                    <i class="ti ti-alert-triangle me-1"></i>
                                    Sin verificar
                                </span>
                            </div>
                            <div class="form-text text-warning">
                                <i class="ti ti-info-circle me-1"></i>
                                Tu dirección de correo electrónico no está verificada
                            </div>
                            <div class="mt-2">
                                <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail"
                                    class="btn btn-outline-primary btn-sm">
                                    <i class="ti ti-mail-forward me-1"></i>
                                    Enviar Email de Verificación
                                </button>
                            </div>
                        }
                    </div>

                    <!-- Nuevo email -->
                    <div class="mb-4">
                        <label asp-for="Input.NewEmail" class="form-label">
                            <i class="ti ti-mail-plus me-1"></i>Nuevo Correo Electrónico
                        </label>
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true"
                            placeholder="Ingrese su nueva dirección de correo" />
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                        <div class="form-text">
                            <i class="ti ti-info-circle me-1"></i>
                            Se enviará un correo de confirmación a la nueva dirección
                        </div>
                    </div>

                    <div class="text-end">
                        <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail"
                            class="btn btn-primary">
                            <i class="ti ti-device-floppy me-1"></i>Cambiar Correo Electrónico
                        </button>
                        <button type="reset" class="btn btn-soft-secondary">
                            <i class="ti ti-refresh me-1"></i>Limpiar
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title-box {
            padding: 1.5rem 0;
        }

        .breadcrumb-item+.breadcrumb-item::before {
            content: ">";
        }

        .alert-border-left {
            border-left: 3px solid #f17171;
        }

        .btn-soft-secondary {
            background-color: rgba(116, 120, 141, 0.1);
            border-color: rgba(116, 120, 141, 0.1);
            color: #74788d;
        }

        .btn-soft-secondary:hover {
            background-color: rgba(116, 120, 141, 0.2);
            border-color: rgba(116, 120, 141, 0.2);
            color: #74788d;
        }

        .form-control:disabled {
            background-color: #f8f9fa;
            opacity: 0.65;
        }

        .input-group-text {
            font-size: 0.875rem;
            font-weight: 500;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .avatar-sm {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-title {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .bg-success-subtle {
            background-color: rgba(34, 197, 94, 0.1) !important;
        }

        .text-success {
            color: #22c55e !important;
        }

        .form-text {
            font-size: 0.875rem;
            margin-top: 0.5rem;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Configurar validation summary personalizado
            const form = document.getElementById('email-form');

            if (form) {
                // Crear el contenedor para mostrar errores
                const errorContainer = document.createElement('div');
                errorContainer.id = 'validation-errors';
                errorContainer.style.display = 'none';
                errorContainer.className = 'alert alert-danger alert-border-left alert-dismissible fade show mb-4';
                errorContainer.setAttribute('role', 'alert');

                // Insertar después del formulario
                form.insertBefore(errorContainer, form.firstElementChild);

                // Función para mostrar errores
                window.showValidationErrors = function (errors) {
                    if (errors && errors.length > 0) {
                        let errorHtml = '<i class="ri-error-warning-line me-3 align-middle fs-16"></i><div><ul class="mb-0">';
                        errors.forEach(function (error) {
                            errorHtml += '<li>' + error + '</li>';
                        });
                        errorHtml += '</ul></div><button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>';

                        errorContainer.innerHTML = errorHtml;
                        errorContainer.style.display = 'block';

                        // Scroll hacia el error
                        errorContainer.scrollIntoView({ behavior: 'smooth', block: 'center' });
                    }
                };

                // Ocultar errores cuando se interactúe con el formulario
                const inputs = form.querySelectorAll('input');
                inputs.forEach(function (input) {
                    input.addEventListener('focus', function () {
                        errorContainer.style.display = 'none';
                    });
                });
            }
        });
    </script>
}
