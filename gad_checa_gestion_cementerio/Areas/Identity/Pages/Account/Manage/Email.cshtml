@page
@model gad_checa_gestion_cementerio.Areas.Identity.Pages.Account.Manage.EmailModel
@{
    ViewData["Title"] = "Email";
    ViewData["ActivePage"] = ManageNavPages.Email;
}

<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0">
                    <i class="fas fa-envelope me-2"></i>@ViewData["Title"]
                </h5>
            </div>
            <div class="card-body">
                <partial name="_StatusMessage" model="Model.StatusMessage" />
                <form id="email-form" method="post">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        @if (Model.IsEmailConfirmed)
                        {
                                    <div class="input-group">
                                        <input asp-for="Email" class="form-control" disabled />
                                        <span class="input-group-text text-success">
                                            <i class="fas fa-check-circle"></i>
                                        </span>
                                    </div>
                        }
                        else
                        {
                                    <input asp-for="Email" class="form-control" disabled />
                                    <button id="email-verification" type="submit" asp-page-handler="SendVerificationEmail" class="btn btn-link mt-2">
                                        Enviar email de verificaci√≥n
                                    </button>
                        }
                    </div>
                    <div class="mb-3">
                        <label asp-for="Input.NewEmail" class="form-label"></label>
                        <input asp-for="Input.NewEmail" class="form-control" autocomplete="email" aria-required="true" />
                        <span asp-validation-for="Input.NewEmail" class="text-danger"></span>
                    </div>
                    <button id="change-email-button" type="submit" asp-page-handler="ChangeEmail" class="btn btn-primary">
                        Cambiar email
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
            <partial name="_ValidationScriptsPartial" />
}