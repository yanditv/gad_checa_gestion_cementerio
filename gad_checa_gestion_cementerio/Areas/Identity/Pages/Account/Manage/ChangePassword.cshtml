@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}

<!-- Breadcrumb -->
<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Mi Cuenta</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="javascript: void(0);">Cuenta</a></li>
                    <li class="breadcrumb-item active">Cambiar Contraseña</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-xxl-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-xxl-9">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-warning-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-key text-warning"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1">@ViewData["Title"]</h5>
                        <p class="text-muted mb-0">Actualiza tu contraseña de acceso</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <partial name="_StatusMessage" for="StatusMessage" />

                <!-- Información de seguridad -->
                <div class="alert alert-info alert-border-left" role="alert">
                    <h6 class="alert-heading mb-2">
                        <i class="ti ti-info-circle me-1"></i>Recomendaciones de seguridad
                    </h6>
                    <p class="mb-0">
                        Use una contraseña fuerte con al menos 8 caracteres, incluyendo letras mayúsculas, minúsculas,
                        números y símbolos.
                    </p>
                </div>

                <form id="change-password-form" method="post">
                    <div asp-validation-summary="ModelOnly"
                        class="alert alert-danger alert-border-left alert-dismissible fade show" role="alert">
                        <i class="ri-error-warning-line me-3 align-middle fs-16"></i>
                        <div></div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>

                    <div class="row">
                        <!-- Contraseña actual -->
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.OldPassword" class="form-label">
                                    <i class="ti ti-lock me-1"></i>Contraseña Actual
                                </label>
                                <div class="password-field position-relative">
                                    <input asp-for="Input.OldPassword" class="form-control password-input"
                                        type="password" autocomplete="current-password" aria-required="true"
                                        placeholder="Ingrese su contraseña actual" />
                                    <span class="password-addon">
                                        <button class="btn btn-link text-decoration-none text-muted password-toggle"
                                            type="button" onclick="togglePassword('Input_OldPassword')">
                                            <i class="ti ti-eye" id="eye-Input_OldPassword"></i>
                                        </button>
                                    </span>
                                </div>
                                <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Nueva contraseña -->
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.NewPassword" class="form-label">
                                    <i class="ti ti-lock-plus me-1"></i>Nueva Contraseña
                                </label>
                                <div class="password-field position-relative">
                                    <input asp-for="Input.NewPassword" class="form-control password-input"
                                        type="password" autocomplete="new-password" aria-required="true"
                                        placeholder="Ingrese su nueva contraseña" />
                                    <span class="password-addon">
                                        <button class="btn btn-link text-decoration-none text-muted password-toggle"
                                            type="button" onclick="togglePassword('Input_NewPassword')">
                                            <i class="ti ti-eye" id="eye-Input_NewPassword"></i>
                                        </button>
                                    </span>
                                </div>
                                <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                                <!-- Indicador de fortaleza de contraseña -->
                                <div class="password-strength mt-2" style="display: none;">
                                    <div class="progress" style="height: 5px;">
                                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                                    </div>
                                    <small class="strength-text text-muted mt-1 d-block"></small>
                                </div>
                            </div>
                        </div>

                        <!-- Confirmar contraseña -->
                        <div class="col-lg-12">
                            <div class="mb-3">
                                <label asp-for="Input.ConfirmPassword" class="form-label">
                                    <i class="ti ti-lock-check me-1"></i>Confirmar Nueva Contraseña
                                </label>
                                <div class="password-field position-relative">
                                    <input asp-for="Input.ConfirmPassword" class="form-control password-input"
                                        type="password" autocomplete="new-password" aria-required="true"
                                        placeholder="Confirme su nueva contraseña" />
                                    <span class="password-addon">
                                        <button class="btn btn-link text-decoration-none text-muted password-toggle"
                                            type="button" onclick="togglePassword('Input_ConfirmPassword')">
                                            <i class="ti ti-eye" id="eye-Input_ConfirmPassword"></i>
                                        </button>
                                    </span>
                                </div>
                                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end">
                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-device-floppy me-1"></i>Actualizar Contraseña
                        </button>
                        <button type="reset" class="btn btn-soft-secondary">
                            <i class="ti ti-refresh me-1"></i>Limpiar Campos
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        .page-title-box {
            padding: 1.5rem 0;
        }

        .breadcrumb-item+.breadcrumb-item::before {
            content: ">";
        }

        .alert-border-left {
            border-left: 3px solid;
        }

        .alert-info.alert-border-left {
            border-left-color: #0ea5e9;
        }

        .alert-danger.alert-border-left {
            border-left-color: #f17171;
        }

        .btn-soft-secondary {
            background-color: rgba(116, 120, 141, 0.1);
            border-color: rgba(116, 120, 141, 0.1);
            color: #74788d;
        }

        .btn-soft-secondary:hover {
            background-color: rgba(116, 120, 141, 0.2);
            border-color: rgba(116, 120, 141, 0.2);
            color: #74788d;
        }

        .password-field {
            position: relative;
        }

        .password-addon {
            position: absolute;
            right: 0;
            top: 0;
            height: 100%;
            display: flex;
            align-items: center;
            padding-right: 0.75rem;
        }

        .password-toggle {
            padding: 0;
            border: none;
            background: none;
        }

        .password-strength .progress-bar {
            transition: all 0.3s ease;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid rgba(0, 0, 0, 0.125);
        }

        .avatar-sm {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-title {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .bg-warning-subtle {
            background-color: rgba(251, 191, 36, 0.1) !important;
        }

        .text-warning {
            color: #fbbc04 !important;
        }
    </style>
}

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Función para mostrar/ocultar contraseña
        function togglePassword(inputId) {
            const input = document.getElementById(inputId);
            const eyeIcon = document.getElementById('eye-' + inputId);

            if (input.type === 'password') {
                input.type = 'text';
                eyeIcon.className = 'ti ti-eye-off';
            } else {
                input.type = 'password';
                eyeIcon.className = 'ti ti-eye';
            }
        }

        // Validador de fortaleza de contraseña
        function checkPasswordStrength(password) {
            let strength = 0;

            if (password.length >= 8) strength++;
            if (password.match(/[a-z]/)) strength++;
            if (password.match(/[A-Z]/)) strength++;
            if (password.match(/[0-9]/)) strength++;
            if (password.match(/[^a-zA-Z0-9]/)) strength++;

            switch (strength) {
                case 0:
                case 1:
                    return { score: 20, feedback: 'Muy débil', color: '#dc3545' };
                case 2:
                    return { score: 40, feedback: 'Débil', color: '#fd7e14' };
                case 3:
                    return { score: 60, feedback: 'Regular', color: '#ffc107' };
                case 4:
                    return { score: 80, feedback: 'Fuerte', color: '#20c997' };
                case 5:
                    return { score: 100, feedback: 'Muy fuerte', color: '#198754' };
            }
        }

        // Inicializar validación de contraseña
        document.addEventListener('DOMContentLoaded', function () {
            const newPasswordInput = document.getElementById('Input_NewPassword');
            const strengthIndicator = document.querySelector('.password-strength');
            const progressBar = strengthIndicator.querySelector('.progress-bar');
            const strengthText = strengthIndicator.querySelector('.strength-text');

            newPasswordInput.addEventListener('input', function () {
                const password = this.value;

                if (password.length > 0) {
                    const result = checkPasswordStrength(password);
                    strengthIndicator.style.display = 'block';
                    progressBar.style.width = result.score + '%';
                    progressBar.style.backgroundColor = result.color;
                    strengthText.textContent = result.feedback;
                } else {
                    strengthIndicator.style.display = 'none';
                }
            });
        });
    </script>
}
