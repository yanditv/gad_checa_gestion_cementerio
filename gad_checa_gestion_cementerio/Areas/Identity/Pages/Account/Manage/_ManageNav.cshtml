@using Microsoft.AspNetCore.Identity
@using gad_checa_gestion_cementerio.Areas.Identity.Data
@inject SignInManager<ApplicationUser> SignInManager
@{
    var hasExternalLogins = (await SignInManager.GetExternalAuthenticationSchemesAsync()).Any();
}

<!-- Navegación Mantis Style -->
<div class="card overflow-hidden">
    <div class="card-body p-0">
        <!-- Header -->
        <div class="bg-primary-gradient p-4 text-white">
            <div class="d-flex align-items-center">
                <div class="flex-shrink-0">
                    <div class="avatar-lg bg-white bg-opacity-20 rounded">
                        <span class="avatar-title">
                            <i class="ti ti-user-cog fs-24"></i>
                        </span>
                    </div>
                </div>
                <div class="flex-grow-1 ms-3">
                    <h5 class="mb-1 text-white">Mi Cuenta</h5>
                    <p class="mb-0 text-white-50">Gestiona tu información personal</p>
                </div>
            </div>
        </div>

        <!-- Navigation Items -->
        <div class="list-group list-group-flush">
            <!-- Perfil -->
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.IndexNavClass(ViewContext)" 
               asp-page="./Index">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-primary-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-user text-primary"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Información Personal</h6>
                        <p class="mb-0 text-muted fs-13">Actualiza tu perfil y datos básicos</p>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="ti ti-chevron-right text-muted"></i>
                    </div>
                </div>
            </a>

            <!-- Email -->
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.EmailNavClass(ViewContext)" 
               asp-page="./Email">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-success-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-mail text-success"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Correo Electrónico</h6>
                        <p class="mb-0 text-muted fs-13">Gestiona tu dirección de email</p>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="ti ti-chevron-right text-muted"></i>
                    </div>
                </div>
            </a>

            <!-- Contraseña -->
            <a class="list-group-item list-group-item-action border-0 @ManageNavPages.ChangePasswordNavClass(ViewContext)" 
               asp-page="./ChangePassword">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-warning-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-key text-warning"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h6 class="mb-1">Contraseña</h6>
                        <p class="mb-0 text-muted fs-13">Cambia tu contraseña de acceso</p>
                    </div>
                    <div class="flex-shrink-0">
                        <i class="ti ti-chevron-right text-muted"></i>
                    </div>
                </div>
            </a>

            @if (hasExternalLogins)
            {
                <!-- Inicios de sesión externos -->
                <a class="list-group-item list-group-item-action border-0 @ManageNavPages.ExternalLoginsNavClass(ViewContext)" 
                   asp-page="./ExternalLogins">
                    <div class="d-flex align-items-center">
                        <div class="flex-shrink-0">
                            <div class="avatar-sm bg-info-subtle rounded">
                                <span class="avatar-title">
                                    <i class="ti ti-link text-info"></i>
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1 ms-3">
                            <h6 class="mb-1">Cuentas Externas</h6>
                            <p class="mb-0 text-muted fs-13">Conecta servicios externos</p>
                        </div>
                        <div class="flex-shrink-0">
                            <i class="ti ti-chevron-right text-muted"></i>
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</div>

<style>
    /* Estilos personalizados para Mantis */
    .avatar-lg {
        width: 4rem;
        height: 4rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-sm {
        width: 2.5rem;
        height: 2.5rem;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .avatar-title {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 100%;
        height: 100%;
    }

    .bg-primary-gradient {
        background: linear-gradient(135deg, #405189 0%, #5a67d8 100%);
    }

    .bg-primary-subtle {
        background-color: rgba(64, 81, 137, 0.1) !important;
    }

    .bg-success-subtle {
        background-color: rgba(34, 197, 94, 0.1) !important;
    }

    .bg-warning-subtle {
        background-color: rgba(251, 191, 36, 0.1) !important;
    }

    .bg-info-subtle {
        background-color: rgba(14, 165, 233, 0.1) !important;
    }

    .fs-24 {
        font-size: 1.5rem !important;
    }

    .fs-13 {
        font-size: 0.8125rem !important;
    }

    .list-group-item {
        padding: 1rem 1.5rem;
        transition: all 0.15s ease-in-out;
    }

    .list-group-item:hover {
        background-color: rgba(0, 0, 0, 0.02);
    }

    .list-group-item.active {
        background-color: rgba(64, 81, 137, 0.08);
        border-left: 3px solid #405189;
        color: #405189;
    }

    .list-group-item.active h6 {
        color: #405189;
        font-weight: 600;
    }

    .text-primary {
        color: #405189 !important;
    }

    .text-success {
        color: #22c55e !important;
    }

    .text-warning {
        color: #fbbc04 !important;
    }

    .text-info {
        color: #0ea5e9 !important;
    }
</style>
