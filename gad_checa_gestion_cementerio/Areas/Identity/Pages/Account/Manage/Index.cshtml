@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-md-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-md-9">
        <div class="card shadow-sm">
            <div class="card-header bg-light">
                <h5 class="mb-0"><i class="fas fa-user me-2"></i>@ViewData["Title"]</h5>
            </div>
            <div class="card-body">
                <partial name="_StatusMessage" for="StatusMessage" />
                <form id="profile-form" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row g-3">
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Username" class="form-control"
                                    placeholder="Por favor elija su nombre de usuario." disabled />
                                <label asp-for="Username" class="form-label">Nombre de usuario</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.PhoneNumber" class="form-control"
                                    placeholder="Por favor ingrese su número de teléfono." />
                                <label asp-for="Input.PhoneNumber" class="form-label">Número de teléfono</label>
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Nombres" class="form-control"
                                    placeholder="Por favor ingrese sus nombres." />
                                <label asp-for="Input.Nombres" class="form-label">Nombres</label>
                                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Apellidos" class="form-control"
                                    placeholder="Por favor ingrese sus apellidos." />
                                <label asp-for="Input.Apellidos" class="form-label">Apellidos</label>
                                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Input.Cedula" class="form-control"
                                    placeholder="Por favor ingrese su cédula." />
                                <label asp-for="Input.Cedula" class="form-label">Cédula</label>
                                <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mt-4">
                        <button id="update-profile-button" type="submit" class="btn btn-primary">
                            <i class="fas fa-save me-2"></i>Guardar cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
