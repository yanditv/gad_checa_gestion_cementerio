@page
@model gad_checa_gestion_cementerio.Areas.Identity.Pages.Account.Manage.IndexModel
@{
    ViewData["Title"] = "Mi Cuenta";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<div class="row">
    <div class="col-xxl-3">
        <partial name="_ManageNav" />
    </div>
    <div class="col-xxl-9">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <div class="flex-shrink-0">
                        <div class="avatar-sm bg-primary-subtle rounded">
                            <span class="avatar-title">
                                <i class="ti ti-user text-primary"></i>
                            </span>
                        </div>
                    </div>
                    <div class="flex-grow-1 ms-3">
                        <h5 class="card-title mb-1">@ViewData["Title"]</h5>
                        <p class="text-muted mb-0">Gestiona tu información personal</p>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <!-- Mensaje de estado -->
                @if (!string.IsNullOrEmpty(Model.StatusMessage))
                {
                    <div class="alert @(Model.StatusMessage.Contains("Error") ? "alert-danger" : "alert-success") alert-border-left alert-dismissible fade show" role="alert">
                        <i class="@(Model.StatusMessage.Contains("Error") ? "ri-error-warning-line" : "ri-check-double-line") me-3 align-middle fs-16"></i>
                        <div>
                            @Model.StatusMessage
                        </div>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger alert-border-left" role="alert"></div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Username" class="form-label fw-medium">
                                    <i class="ti ti-user me-2 text-primary"></i>Nombre de Usuario
                                </label>
                                <input asp-for="Username" class="form-control bg-light" disabled />
                                <div class="form-text">
                                    <i class="ti ti-info-circle me-1"></i>
                                    El nombre de usuario no se puede cambiar
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.PhoneNumber" class="form-label fw-medium">
                                    <i class="ti ti-phone me-2 text-primary"></i>@Html.DisplayNameFor(m => m.Input.PhoneNumber)
                                </label>
                                <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Ingrese su número de teléfono" />
                                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.Nombres" class="form-label fw-medium">
                                    <i class="ti ti-user-circle me-2 text-primary"></i>@Html.DisplayNameFor(m => m.Input.Nombres)
                                </label>
                                <input asp-for="Input.Nombres" class="form-control" placeholder="Ingrese sus nombres" />
                                <span asp-validation-for="Input.Nombres" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.Apellidos" class="form-label fw-medium">
                                    <i class="ti ti-user-circle me-2 text-primary"></i>@Html.DisplayNameFor(m => m.Input.Apellidos)
                                </label>
                                <input asp-for="Input.Apellidos" class="form-control" placeholder="Ingrese sus apellidos" />
                                <span asp-validation-for="Input.Apellidos" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="Input.Cedula" class="form-label fw-medium">
                                    <i class="ti ti-id me-2 text-primary"></i>@Html.DisplayNameFor(m => m.Input.Cedula)
                                </label>
                                <input asp-for="Input.Cedula" class="form-control" placeholder="Ingrese su número de cédula" />
                                <span asp-validation-for="Input.Cedula" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="text-end pt-3 border-top">
                        <button type="submit" class="btn btn-primary">
                            <i class="ti ti-device-floppy me-1"></i>Guardar cambios
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <style>
        /* Estilos personalizados para Mantis */
        .bg-primary-subtle {
            background-color: rgba(64, 81, 137, 0.1) !important;
        }

        .text-primary {
            color: #405189 !important;
        }

        .avatar-sm {
            width: 2.5rem;
            height: 2.5rem;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .avatar-title {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 100%;
            height: 100%;
        }

        .fw-medium {
            font-weight: 500;
        }

        .fs-16 {
            font-size: 1rem !important;
        }

        .alert-border-left {
            border-left: 3px solid;
        }

        .alert-success.alert-border-left {
            border-left-color: #22c55e;
        }

        .alert-danger.alert-border-left {
            border-left-color: #ef4444;
        }

        .form-control {
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
            padding: 0.5rem 0.75rem;
        }

        .form-control:focus {
            border-color: #405189;
            box-shadow: 0 0 0 0.2rem rgba(64, 81, 137, 0.25);
        }

        .form-control.bg-light {
            background-color: #f8f9fa !important;
        }

        .form-text {
            font-size: 0.875rem;
            margin-top: 0.25rem;
        }

        .text-danger {
            color: #ef4444 !important;
        }

        .btn-primary {
            background-color: #405189;
            border-color: #405189;
        }

        .btn-primary:hover {
            background-color: #364574;
            border-color: #364574;
        }

        .card {
            box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
            border: 1px solid rgba(0, 0, 0, 0.125);
        }
    </style>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
