@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
}

<div
    class="min-h-screen flex items-center justify-center bg-gradient-to-br from-blue-50 via-blue-100 to-blue-200 py-12 px-4 sm:px-6 lg:px-8">
    <div class="w-full max-w-sm space-y-8 bg-white p-8 rounded-xl shadow-lg border border-gray-100">
        <div>
            <div class="flex justify-center">
                <img class="h-32 w-auto transform transition-transform duration-300 hover:scale-105" src="~/logo.png"
                    alt="Logo GAD Checa" />
            </div>
            <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                @ViewData["Title"]
            </h2>
            <p class="mt-2 text-center text-sm text-gray-600">
                Sistema de Gestión de Cementerio
            </p>
        </div>
        <form class="mt-8 space-y-6" id="account" method="post">
            <div asp-validation-summary="ModelOnly"
                class="text-red-500 text-sm bg-red-50 p-4 rounded-lg border border-red-100" role="alert"></div>
            <div class="space-y-5">
                <div>
                    <label asp-for="Input.Email" class="block text-sm font-medium text-gray-700 mb-1">Correo
                        electrónico</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                            style="padding-left: 10px;">
                            <i class="ti ti-mail text-gray-400 text-lg"></i>
                        </div>
                        <input asp-for="Input.Email"
                            class="py-3 px-4 pl-12 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                            placeholder="ejemplo@teobu.com" style="padding-left: 30px; padding-right: 10px;" />
                        <span asp-validation-for="Input.Email" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
                <div>
                    <label asp-for="Input.Password"
                        class="block text-sm font-medium text-gray-700 mb-1">Contraseña</label>
                    <div class="relative">
                        <div class="absolute inset-y-0 left-0 pl-4 flex items-center pointer-events-none"
                            style="padding-left: 10px;">
                            <i class="ti ti-lock text-gray-400 text-lg"></i>
                        </div>
                        <input asp-for="Input.Password" type="password" id="password"
                            class="py-3 px-4 pl-12 pr-12 block w-full border-gray-200 rounded-lg text-sm focus:border-blue-500 focus:ring-blue-500 disabled:opacity-50 disabled:pointer-events-none"
                            placeholder="••••••••" style="padding-left: 30px; padding-right: 40px;" />
                        <button type="button" onclick="togglePassword() " style="padding: 10px;"
                            class="absolute inset-y-0 right-0 pr-4 flex items-center">
                            <i id="eyeIcon"
                                class="ti ti-eye text-gray-400 hover:text-gray-500 cursor-pointer transition-colors duration-200 text-lg mr-2"></i>
                        </button>
                        <span asp-validation-for="Input.Password" class="text-red-500 text-xs mt-1"></span>
                    </div>
                </div>
            </div>

            <div class="flex items-center justify-between">
                <div class="flex items-center">
                    <input asp-for="Input.RememberMe"
                        class="h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded"
                        style="margin-right: 10px;" />
                    <label asp-for="Input.RememberMe" class="ml-2 block text-sm text-gray-900">
                        Recordarme
                    </label>
                </div>

                <div class="text-sm">
                    <a asp-page="./ForgotPassword"
                        class="font-medium text-blue-600 hover:text-blue-500 transition-colors duration-200">
                        ¿Olvidó su contraseña?
                    </a>
                </div>
            </div>

            <div>
                <button type="submit"
                    class="w-full py-3 px-4 inline-flex justify-center items-center gap-x-2 text-sm font-semibold rounded-lg border border-transparent bg-blue-600 text-white hover:bg-blue-700 disabled:opacity-50 disabled:pointer-events-none focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-all duration-200">
                    <i class="ti ti-login text-lg"></i>
                    Iniciar Sesión
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function togglePassword() {
            const passwordInput = document.getElementById('password');
            const eyeIcon = document.getElementById('eyeIcon');

            if (passwordInput.type === 'password') {
                passwordInput.type = 'text';
                eyeIcon.className = 'ti ti-eye-off text-gray-400 hover:text-gray-500 cursor-pointer transition-colors duration-200 text-lg';
            } else {
                passwordInput.type = 'password';
                eyeIcon.className = 'ti ti-eye text-gray-400 hover:text-gray-500 cursor-pointer transition-colors duration-200 text-lg';
            }
        }
    </script>
}
